<div class="container">
  <p id="notice"><%%= notice %></p>

  <h4><%= singular_table_name.camelize %></h4>

  <!-- Page Heading/Breadcrumbs -->
  <%%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <% attributes.each do |attribute| -%>
          <th scope="col"><%= attribute.human_name %></th>
          <% end -%>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <% attributes.each do |attribute| -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td><%%= link_to 'Mostrar', <%= singular_table_name %> %></td>
          <td><%%= link_to 'Editar', edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
          <td><%%= link_to 'Apagar', <%= singular_table_name %>, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <%% end %>
      </tbody>
    </table>

    <%%= link_to "Novo Registo", new_<%= singular_table_name %>_path, class: 'btn btn-success' %>
    <%%= link_to 'Voltar', root_path, class: 'btn btn-primary' %>

    <%%= link_to new_<%= singular_table_name %>_path, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %> 

    <%%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>        

  </div>
</div>