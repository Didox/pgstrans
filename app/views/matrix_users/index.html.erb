<p id="notice"><%= notice %></p>

<h1>Matrix Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Master profile</th>
      <th>Sub dist</th>
      <th>Sub agent</th>
      <th>Filial</th>
      <th>Pdv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matrix_users.each do |matrix_user| %>
      <tr>
        <td><%= matrix_user.user_id %></td>
        <td><%= matrix_user.master_profile %></td>
        <td><%= matrix_user.sub_dist %></td>
        <td><%= matrix_user.sub_agent %></td>
        <td><%= matrix_user.filial %></td>
        <td><%= matrix_user.pdv %></td>
        <td><%= link_to 'Show', matrix_user %></td>
        <td><%= link_to 'Edit', edit_matrix_user_path(matrix_user) %></td>
        <td><%= link_to 'Destroy', matrix_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

