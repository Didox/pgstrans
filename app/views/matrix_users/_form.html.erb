<div class="col-md-12" data-target="toggle.grid">
<div class="card border-simpleform box-shadow mb-4">
  <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
    <div>
      <strong>Dados</strong><br />
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
        <%= simple_form_for(@matrix_user) do |f| %>
          <% if @matrix_user.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4><%= pluralize(@matrix_user.errors.count, "erros") %> no matriz de usu√°rios, confira abaixo:</h4>

              <ul>
              <% @matrix_user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-inputs">
            <%= f.input :user_id %>
          </div>

          <div class="form-inputs">
            <%= f.label :master_profile, "Master Profile" %>
            <%= f.select :master_profile, MasterProfile.all.collect{|d| [d.description, d.id]}, {}, required:true, class: "form-control" %>
          </div>

          <div class="form-inputs">
            <%= f.label :sub_distribuidor, "Sub-Distribuidor" %>
            <%= f.select :sub_distribuidor, SubDistribuidor.all.collect{|d| [d.nome, d.id]}, {}, required:true, class: "form-control" %>   
          </div>

          <div class="form-inputs">
            <%= f.label :sub_agente, "Sub-Agente" %>
            <%= f.select :sub_agente, SubAgente.all.collect{|d| [d.nome_fantasia, d.id]}, {}, required:true, class: "form-control" %>      
          </div>

          <div class="form-inputs">
            <%= f.input :filial %>
          </div>

          <div class="form-inputs">
            <%= f.input :pdv %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Confirmar", class: 'btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
