<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">

      <%= simple_form_for(@return_code_api, html: { class: "form-vertical", role: "form" }) do |f| %>
        <% if @return_code_api.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@return_code_api.errors.count, "erros") %> no código de retorno API, confira abaixo:</h4>

            <ul>
            <% @return_code_api.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="form-input col-sm-6">
          <%= f.input :return_code, :label => "Código de Retorno" %>
        </div>
        <div class="form-input col-sm-6">
          <%= f.input :codigo_erro_pagaso, :label => "Código de Erro Pagaso" %>
        </div>
        <div class="form-input col-sm-6">
          <%= f.input :return_description, :label => "Descrição do Código de Retorno" %>
        </div>
        <div class="form-input col-sm-6">
          <%= f.input :error_description, :label => "Descrição do Erro no Idioma Original" %>
        </div>
        <div class="form-input col-sm-6">
          <%= f.input :error_description_pt, :label => "Descrição do Erro em Português" %>
        </div>
        <div class="form-input col-sm-6">
          <%= f.label :partner_id, "Parceiro" %>
          <%= f.select :partner_id, Partner.all.collect{|p|[p.name, p.id]}, {}, {class: 'form-control is-valid'} %>
        </div>        
        <div class="form-input col-sm-6">
          <%= f.label :sucesso, "Marque se esse código de retorno corresponde a sucesso na transação" %>
          <%= f.check_box :sucesso %>
        </div>     
        <div class="form-actions col-sm-12" style="margin-top: 15px">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>