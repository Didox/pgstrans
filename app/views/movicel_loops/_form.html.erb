<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@movicel_loop, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @movicel_loop.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@movicel_loop.errors.count, "erros") %> no movicel_loop, confira abaixo:</h4>

            <ul>
            <% @movicel_loop.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

                  <div class="form-input col-sm-6">
            <%= f.label :usuario, class: "col-sm-2 control-label" %>
            <%= f.text_field :usuario, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :token, class: "col-sm-2 control-label" %>
            <%= f.text_field :token, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :uri, class: "col-sm-2 control-label" %>
            <%= f.text_field :uri, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :ambiente, class: "col-sm-2 control-label" %>
            <%= f.text_field :ambiente, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :agente, class: "col-sm-2 control-label" %>
            <%= f.text_field :agente, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :terminal, class: "col-sm-2 control-label" %>
            <%= f.text_field :terminal, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :valor, class: "col-sm-2 control-label" %>
            <%= f.text_field :valor, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :repeticao, class: "col-sm-2 control-label" %>
            <%= f.number_field :repeticao, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :nropedidoinicio, class: "col-sm-2 control-label" %>
            <%= f.text_field :nropedidoinicio, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :nropedido, class: "col-sm-2 control-label" %>
            <%= f.text_field :nropedido, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :request, class: "col-sm-2 control-label" %>
            <%= f.text_field :request, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :response, class: "col-sm-2 control-label" %>
            <%= f.text_field :response, class: "form-control" %>
          </div>
                <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
