<div class="container">
  <h4>Status de Produtos</h4>

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @status_produtos.each do |status_produto| %>
      <tr>
                <td><%= status_produto.id %></td>
                <td><%= status_produto.nome %></td>
                <td><%= link_to 'Mostrar', status_produto %></td>
        <td><%= link_to 'Editar', edit_status_produto_path(status_produto) %></td>
        <td><%= link_to 'Apagar', status_produto, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_status_produto_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>