<div class="col-md-12">

  <div class="col-sm-12">
    <h4>Distribuidores</h4>
  </div>
  <br><br>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="col-sm-12">
        <div class="col-sm-3">
          <div class="form-group">
            <label>Nome do Distruidor</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Morada</label>
            <div>
              <input type="text" name="morada" value="<%= params[:morada] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Município</label>
            <div>
              <select name="municipio_id" onchange="pgstrans.carregaMunicipio(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Municipio.all.each do |municipio| %>
                  <option value="<%= municipio.id %>" <% if municipio.id.to_s == params[:municipio_id] %> selected="selected" <% end %> ><%= municipio.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Província</label>
            <div>
              <select name="provincia_id" onchange="pgstrans.carregaProvincia(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Provincium.all.each do |provincia| %>
                  <option value="<%= provincia.id %>" <% if provincia.id.to_s == params[:provincia_id] %> selected="selected" <% end %> ><%= provincia.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
      </div>
      <div class="form-group ml-auto">
        <div style="float: right;margin-right:10px">
          <%= button_tag(type: 'submit', class: "btn btn-info", value: "Buscar", style: "width: 150px;text-align: center;margin-right: 0px;") do %>
             <span class="glyphicon glyphicon-search"></span> Buscar
          <% end %>
          <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
            <span class="glyphicon glyphicon-arrow-left"></span>
            Voltar
          <% end %>
          <%= link_to new_sub_distribuidor_path, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
            <span class="glyphicon glyphicon-plus"></span>
            Novo Registo
          <% end %>    
        </div>
    </form>
  </div>  

  <div class="col-sm-12">
    <table class="table table-hover scroltable">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">BI</th>
          <th scope="col">Telefone</th>
          <th scope="col">Morada</th>
          <th scope="col">Município</th>
          <th scope="col">Província</th>
          <th colspan="3">Ações para o Registo</th>
        </tr>
      </thead>

      <tbody>
        <% @sub_distribuidors.each do |sub_distribuidor| %>
          <tr>
            <td><%= sub_distribuidor.id %></td>
            <td scope="row"><%= sub_distribuidor.nome %></td>
            <td><%= sub_distribuidor.bi %></td>
            <td><%= sub_distribuidor.telefone %></td>
            <td><%= sub_distribuidor.morada %></td>
            <td><%= sub_distribuidor.municipio.nome %></td>
            <td><%= sub_distribuidor.provincia.nome %></td>
            <td><%= link_to 'Mostrar', sub_distribuidor %></td>
            <td><%= link_to 'Editar', edit_sub_distribuidor_path(sub_distribuidor) %></td>
            <td><%= link_to 'Apagar', sub_distribuidor, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @sub_distribuidors, :container => false %>
    </div> 
    
    <%= link_to new_sub_distribuidor_path, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;") do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;") do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      Voltar
    <% end %>
  </div>
</div>