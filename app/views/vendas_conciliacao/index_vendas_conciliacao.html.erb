    <table class="table table-hover">
      <thead>
        <tr>
          <th style="text-align:center" scope="col">Data da Venda</th>
          <th style="text-align:right" scope="col">Valor</th>
          <th style="text-align:right" scope="col">Lucro</th>
          <th style="text-align:right" scope="col">Custo</th>
        </tr>
      </thead>

      <tbody>
        <% 
        valor_original_total_pagina = 0
        valor_desconto_total_pagina = 0
        valor_total_pagina = 0 
        %>
        <% @vendas.each do |venda| 
          venda = OpenStruct.new venda
        %>
        <tr>
          <td style="text-align:center" ><%= venda.data_venda.to_datetime.strftime("%d/%m/%Y") %></td>
          <td align="right"><%= number_to_currency(venda.valor) %></td>
          <td align="right">
            <%= number_to_currency(venda.lucro) %><br>
            <% porcentagem = (venda.lucro.to_f / venda.valor.to_f * 100) %>
          </td>
          <td align="right"><%= number_to_currency(venda.custo) %></td>
          <% 
            valor_original_total_pagina += venda.valor
            valor_desconto_total_pagina += venda.lucro 
            valor_total_pagina += venda.custo 
          %>
        </tr>
        <% end %>
        <tfoot>
          <tr>
            <td align="right"><b>Total da Página</b></td>
            <td align="right">
              <b><%= number_to_currency(valor_original_total_pagina) %></b>
            </td>    
            <td align="right">
              <b>
                <%= number_to_currency(valor_desconto_total_pagina) %>
              </b>
            </td>
            <td align="right">
              <b><%= number_to_currency(valor_total_pagina) %></b>
            </td>        
          </tr>
          <tr>
            <td align="right"><b>Total Geral</b></td>
            <td align="right">
              <b><%= number_to_currency(@valor_original_total) %></b>
            </td>    
            <td align="right">
              <b>
                <%= number_to_currency(@valor_desconto_total) %>
              </b>
            </td>
            <td align="right">
              <b><%= number_to_currency(@valor_total) %></b>
            </td>        
          </tr>
        </tfoot>
      </tbody>
    </table>
    
    <%= render "/shared/paginate", path: "/vendas_conciliacao/index_vendas_conciliacao", records: @vendas, :per_page => @per_page %>

    <%= link_to backoffice_index_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      Voltar
    <% end %>
  </div>
</div>

