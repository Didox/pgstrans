                    <h3 class="panel-title"><span class="label label-success">Tabelas Auxiliares</span></h3>
                </div>
                <div class="panel-body">
                    <% if PerfilUsuario.tem_acesso?(:industries, :index) %>
                    <span><%= link_to 'Ramos de Atividade', industries_path %></span>
                    <% end %>
                </div>
                <ul class="list-group">
                    <% if PerfilUsuario.tem_acesso?(:dispositivos, :index) %>
                    <li class="list-group-item"><%= link_to 'Dispositivos', dispositivos_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:canal_vendas, :index) %>
                    <li class="list-group-item"><%= link_to 'Canais de Venda', canal_vendas_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:countries, :index) %>
                    <li class="list-group-item"><%= link_to 'Países', countries_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:provincia, :index) %>
                    <li class="list-group-item"><%= link_to 'Províncias', provincia_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:municipios, :index) %>
                    <li class="list-group-item"><%= link_to 'Municípios', municipios_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:moedas, :index) %>
                    <li class="list-group-item"><%= link_to 'Moedas', moedas_path %></li>
                    <% end %>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
