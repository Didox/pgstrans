                <ul class="list-group">
                    <% if PerfilUsuario.tem_acesso?(:bancos, :index) %>
                        <li class="list-group-item"><%= link_to 'Lista de Bancos', bancos_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:lancamentos, :index) %>
                        <li class="list-group-item"><%= link_to 'Tipos de Lançamentos', lancamentos_path %></li>
