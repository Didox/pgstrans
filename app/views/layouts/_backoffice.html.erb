                        <li class="list-group-item"><%= link_to 'Sequência de Vendas Unitel', unitel_sequences_path %></li>
                    <% end %>

                    <% if PerfilUsuario.tem_acesso?(:parametros, :index) %>
                        <li class="list-group-item"><%= link_to 'Parâmetros de Integração', parametros_path %></li>
                    <% end %>

                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info text-center">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="label label-success">Conta Corrente</span></h3>
                </div>
                <div class="panel-body">
                    <% if PerfilUsuario.tem_acesso?(:conta_correntes, :index) %>
                    <span><%= link_to 'Conta Corrente', conta_correntes_path %></span>
                    <% end %>
