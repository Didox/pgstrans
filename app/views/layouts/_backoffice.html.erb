<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Backoffice
                <small>Área Restrita</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
                <li class="active">Serviços</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-info text-center">
                <div class="panel-heading">
                     <h3 class="panel-title"><span class="label label-danger">Usuários / Clientes</span></h3>
                </div>
                <div class="panel-body">
                    <span><%= link_to 'Matriz de Usuários', matrix_users_path %></span>
                </div>
                <ul class="list-group">
                    <% if PerfilUsuario.tem_acesso?(:master_profiles, :index) %>
                    <li class="list-group-item"><%= link_to 'Perfil Master', master_profiles_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:sub_distribuidors, :index) %>
                    <li class="list-group-item"><%= link_to 'Subdistribuidores', sub_distribuidors_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:sub_agentes, :index) %>
                    <li class="list-group-item"><%= link_to 'Subagentes', sub_agentes_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:perfil_usuarios, :index) %>
                    <li class="list-group-item"><%= link_to 'Perfis de Usuários', perfil_usuarios_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:usuarios, :index) %>
                    <li class="list-group-item"><%= link_to 'Usuários', usuarios_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:status_clientes, :index) %>
                    <li class="list-group-item"><%= link_to 'Situação de Clientes / Usuários', status_clientes_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:uni_pessoal_empresas, :index) %>
                    <li class="list-group-item"><%= link_to 'Unipessoal / Empresa', uni_pessoal_empresas_path %></li>
                    <% end %>
                    <li class="list-group-item">&nbsp;</li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info text-center">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="label label-danger">Parceiros / Produtos</span></h3>
                </div>
                <div class="panel-body">
                    <% if PerfilUsuario.tem_acesso?(:partners, :index) %>
                    <span><%= link_to 'Parceiros', partners_path %></span>
                    <% end %>
                </div>
                <ul class="list-group">
                    <% if PerfilUsuario.tem_acesso?(:produtos, :index) %>
                    <li class="list-group-item"><%= link_to 'Produtos', produtos_path %></li>
                    <% end %>
                    <% if PerfilUsuario.tem_acesso?(:status_parceiros, :index) %>
                    <li class="list-group-item"><%= link_to 'Situação de Parceiros', status_parceiros_path %></li>
                    <% end %>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                </ul>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info text-center">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="label label-danger">Remuneração / Margem</span></h3>
                </div>
                <div class="panel-body">
                    <% if PerfilUsuario.tem_acesso?(:remuneracaos, :index) %>
                    <span><%= link_to 'Remuneração Clientes', remuneracaos_path %></span>
                    <% end %>
                </div>
                <ul class="list-group">
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                    <li class="list-group-item">&nbsp;</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-info text-center">
                <div class="panel-heading">
                     <h3 class="panel-title"><span class="label label-success">Transações</span></h3>
                </div>
                <div class="panel-body">
                    <% if PerfilUsuario.tem_acesso?(:tipo_transacaos, :index) %>
                    <span><%= link_to 'Tipos de Transações', tipo_transacaos_path %></span>
                    <% end %>
                </div>
                <ul class="list-group">
                    <% if PerfilUsuario.tem_acesso?(:vendas, :index) %>
                        <li class="list-group-item"><%= link_to 'Vendas', vendas_path %></li>
                    <% end %>

                    <% if PerfilUsuario.tem_acesso?(:return_code_apis, :index) %>
