                </div>
                <div class="panel-body">
                    <% if PerfilUsuario.tem_acesso?(usuario_logado, :Industries, :index) %>
                    <span><%= link_to 'Ramos de Atividade', industries_path %></span>
                    <% end %>
                </div>
                <ul class="list-group">
                    <% if PerfilUsuario.tem_acesso?(usuario_logado, :Dispositivos, :index) %>
