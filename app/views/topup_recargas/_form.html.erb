
<%= simple_form_for(@topup_recarga) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :validation_id %>
    <%= f.input :header_element %>
    <%= f.input :topup_req_header %>
    <%= f.input :request_id %>
    <%= f.input :header_timestamp %>
    <%= f.input :header_source_system %>
    <%= f.input :credentials_element %>
    <%= f.input :credentials_user %>
    <%= f.input :credentials_password %>
    <%= f.input :attributes_list %>
    <%= f.input :attribute_element %>
    <%= f.input :attribute_name %>
    <%= f.input :attribute_value %>
    <%= f.input :body_element %>
    <%= f.input :body_req_element %>
    <%= f.input :body_input_message %>
    <%= f.input :body_topup_req_body_type %>
    <%= f.input :body_topup_req_body_amount %>
    <%= f.input :body_topup_req_body_msisdn %>
    <%= f.input :od_header_element %>
    <%= f.input :od_topup_resp_input_message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
