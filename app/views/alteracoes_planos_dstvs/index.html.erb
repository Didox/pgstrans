<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <br>
    <h3>Alterações de Planos DSTV</h3>
  </div>  
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12" style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-4">
          <div class="form-group">
            <label>Customer Number/Número do Cliente</label>
            <div>
              <input type="text" name="customer_number" value="<%= params[:customer_number] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Smartcard/Device Number</label>
            <div>
              <input type="text" name="smartcard" value="<%= params[:smartcard] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Receipt Number DSTV</label>
            <div>
              <input type="text" name="receipt_number" value="<%= params[:receipt_number] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Data da Transação</label>
            <div>
              <input type="date" name="transaction_date_time" value="<%= params[:transaction_date_time] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Tipo de Plano</label>
            <div>
              <select name="tipo_plano" id="tipo_plano" class="form-control" style="width100%;max-width: 500px;">
                <option value="" <% if params[:tipo_plano].blank? %> selected="selected" <% end %>>
                  Todos
                </option>
                <option value="mensal" <% if params[:tipo_plano] == "mensal" %> selected="selected" <% end %>>
                  Mensal
                </option>
                <option value="anual" <% if params[:tipo_plano] == "anual" %> selected="selected" <% end %>>
                  Anual
                </option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Transaction Number Pagasó</label>
            <div>
              <input type="text" name="transaction_number" value="<%= params[:transaction_number] %>" class="form-control">
            </div>
          </div>
        </div>
        <div>
        <div class="form-group">
          <div style="float: right;margin-right:10px">
            <input type="submit" value="Buscar" class="btn btn-info">
            <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Voltar
            <% end %>         
          </div>
        </div>
    </form>
    <div class="col-md-12"
      <h4>
        Total de Ocorrências: <strong><%= number_to_currency(@alteracoes_planos_dstvs_total, :precision => 0, :unit => "") %></strong>
      </h4>
      <hr>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" style="width: 30%">Dados</th>
          <th scope="col">Envio e Resposta</th>
        </tr>
      </thead>
      <tbody>
        <% @alteracoes_planos_dstvs.each do |alteracoes_planos_dstv| %>
        <tr>
          <td>
            <b>Customer number</b>: <%= alteracoes_planos_dstv.customer_number %><br>
            <b>Smartcard</b>: <%= alteracoes_planos_dstv.smartcard %><br>
            <b>Produto</b>: <%= alteracoes_planos_dstv.produto %><br>
            <b>Usuário</b>: <%= alteracoes_planos_dstv.usuario.nome rescue "" %><br>
            <b>Codigo</b>: <%= alteracoes_planos_dstv.codigo %><br>
            <b>Valor</b>: <%= alteracoes_planos_dstv.valor %><br>
            <b>Receipt number</b>: <%= alteracoes_planos_dstv.receipt_number %><br>
            <b>Transaction number</b>: <%= alteracoes_planos_dstv.transaction_number %><br>
            <b>Status</b>: <%= alteracoes_planos_dstv.status %><br>
            <b>Transaction date time</b>: <%= alteracoes_planos_dstv.transaction_date_time %><br>
            <b>Audit reference number</b>: <%= alteracoes_planos_dstv.audit_reference_number %><br>
            <b>Tipo de plano</b>: <%= alteracoes_planos_dstv.tipo_plano %><br>
          </td>
          <td>
            <b>Envio: </b> <%= alteracoes_planos_dstv.response_body %><br>
            <hr>
            <b>Resposta: </b> <%= alteracoes_planos_dstv.request_body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-12 apple_pagination">
    <%= will_paginate @alteracoes_planos_dstvs, :container => false %>
  </div> 

  <%= link_to 'Voltar', "/backoffice/index", class: 'btn btn-danger' %>
</div>