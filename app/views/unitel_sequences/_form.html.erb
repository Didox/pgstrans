<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@unitel_sequence, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @unitel_sequence.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@unitel_sequence.errors.count, "erros") %> no unitel_sequence, confira abaixo:</h4>

            <ul>
            <% @unitel_sequence.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="form-input col-sm-6">
            <%= f.label :sequence_id, class: "col-sm-2 control-label" %>
            <%= f.number_field :sequence_id, class: "form-control" %>
          </div>
          
          <div class="form-input col-sm-6">
            <%= f.label :venda, class: "col-sm-2 control-label" %>
            <%= f.text_field :venda, class: "form-control" %>
          </div>
          
          <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
