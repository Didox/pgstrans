<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Parceiros</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @partners.each do |partner| %>
        <tr>
          <td><%= partner.id %></td>
          <td><%= partner.name %></td>
          <td><%= link_to 'Show', partner %></td>
          <td><%= link_to 'Edit', edit_partner_path(partner) %></td>
          <td><%= link_to 'Destroy', partner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p><%= link_to 'New Partner', new_partner_path %></p>

</div>