<div class="container">

  <h3>Parceiros</h3>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Status</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @partners.each do |partner| %>
          <tr>
            <td><%= partner.id %></td>
            <td><%= partner.name %></td>
            <td><%= partner.status_parceiro.nome rescue "" %></td>
            <td><%= link_to 'Mostrar', partner %></td>
            <td><%= link_to 'Editar', edit_partner_path(partner) %></td>
            <td><%= link_to 'Apagar', partner, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_partner_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to root_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>