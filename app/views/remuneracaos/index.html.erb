<div class="container">
  <h4>Remunerações</h4>

  <p>Os valores são os acertados com o agente e que incluem a margem acertada na revenda da recarga.<p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Usuário</th>
        <th scope="col">Produto</th>
        <th scope="col">Valor telemóvel</th>
        <th scope="col">Valor site</th>
        <th scope="col">Valor POS</th>
        <th scope="col">Valor TEF</th>
        <th scope="col">Início da Vigência</th>
        <th scope="col">Fim da Vigência</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @remuneracaos.each do |remuneracao| %>
      <tr>
        <td><%= remuneracao.id %></td>
        <td><%= remuneracao.usuario.nome %></td>
        <td><%= remuneracao.produto.description %></td>
        <td><%= remuneracao.valor_venda_final_telemovel %></td>
        <td><%= remuneracao.valor_venda_final_site %></td>
        <td><%= remuneracao.valor_venda_final_pos %></td>
        <td><%= remuneracao.valor_venda_final_tef %></td>
        <td><%= remuneracao.vigencia_inicio %></td>
        <td><%= remuneracao.vigencia_fim %></td>
        <td><%= link_to 'Mostrar', remuneracao %></td>
        <td><%= link_to 'Editar', edit_remuneracao_path(remuneracao) %></td>
        <td><%= link_to 'Apagar', remuneracao, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_remuneracao_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>