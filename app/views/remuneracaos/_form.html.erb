<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@remuneracao, html: { class: "form-vertical", role: "form" }) do |f| %>
        <% if @remuneracao.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@remuneracao.errors.count, "erros") %> no remuneracao, confira abaixo:</h4>

            <ul>
            <% @remuneracao.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-inputs col-sm-6">
          <%= f.label :usuario_id, "Usuário" %>
          <%= f.select :usuario_id, Usuario.all.collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
        </div>
      
        <div class="form-inputs col-sm-6">
          <%= f.label :produto_id %>
          <%= f.select :produto_id, Produto.all.collect{|d| [d.description, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_venda_final_telemovel, :label => "Valor venda final telemóvel", placeholder: "Valor de venda no agente" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_venda_final_site, :label => "Valor venda final site", placeholder: "Valor de venda no agente" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_venda_final_pos, :label => "Valor venda final POS", placeholder: "Valor de venda no agente" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_venda_final_tef, :label => "Valor venda final TEF", placeholder: "Valor de venda no agente" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.label :vigencia_inicio, "Início de vigência" %>
          <%= f.date_field :vigencia_inicio, class:"form-control" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.label :vigencia_fim, "Fim de vigência" %>
          <%= f.date_field :vigencia_fim, class:"form-control" %>
        </div>

        <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
