<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>

    <div class="border-bootstrap box-shadow mb-4">
      <div class="card-header text-bootstrap align-items-center justify-content-between">
        
      <%= form_for(@remuneracao, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @remuneracao.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@remuneracao.errors.count, "erros") %> no remuneracao, confira abaixo:</h4>

            <ul>
            <% @remuneracao.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :usuario_id, "Usuário", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.select :usuario_id, Usuario.all.collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :produto_id, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.select :produto_id, Produto.all.collect{|d| [d.description, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
          </div>
        </div>
              <div class="form-group">
          <%= f.label :valor_venda_final_telemovel, "Valor Telemóvel", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :valor_venda_final_telemovel, placeholder: "Valor de venda no agente - telemóvel", class: "form-control" %>
          </div>
        </div>
              <div class="form-group">
          <%= f.label :valor_venda_final_site, "Valor Site", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :valor_venda_final_site, placeholder: "Valor de venda no agente - site", class: "form-control" %>
          </div>
        </div>
              <div class="form-group">
          <%= f.label :valor_venda_final_pos, "Valor POS", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :valor_venda_final_pos, placeholder: "Valor de venda no agente - POS", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :valor_venda_final_tef, "Valor TEF", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :valor_venda_final_tef, placeholder: "Valor de venda no agente - TEF", class: "form-control" %>
          </div>
        </div>
              <div class="form-group">
          <%= f.label :vigencia_inicio, "Início de vigência", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.datetime_field :vigencia_inicio, class: "form-control" %>
          </div>
        </div>
              <div class="form-group">
          <%= f.label :vigencia_fim, "Fim de vigência", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.datetime_field :vigencia_fim, class: "form-control" %>
          </div>
        </div>
              <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Salvar", class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


