<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@pagaso_erro_codigo, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @pagaso_erro_codigo.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@pagaso_erro_codigo.errors.count, "erros") %> no pagaso_erro_codigo, confira abaixo:</h4>

            <ul>
            <% @pagaso_erro_codigo.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-input col-sm-12">
          <%= f.label :de, class: "control-label" %>
          <%= f.text_field :de, class: "form-control" %>
        </div>
         <div class="form-input col-sm-12">
          <%= f.label :para, class: "control-label" %>
          <%= f.text_field :para, class: "form-control" %>
         </div>
         <div class="form-input col-sm-12">
          <%= f.label :mensagem, class: "control-label" %>
          <%= f.text_field :mensagem, class: "form-control" %>
         </div>
         <div class="form-input col-sm-12">
          Informe a mensagem que será apresentada na resposta à requisição da API Pagasó
         </div>
         <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
