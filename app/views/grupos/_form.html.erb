<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Cadastro de Grupos de Usuários</strong><br />
      </div>
    </div>
  </div>
  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      <%= simple_form_for(@grupo, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @grupo.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@grupo.errors.count, "erros") %> no grupo, confira abaixo:</h4>
            <ul>
            <% @grupo.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-input col-sm-12">
          <%= f.label :nome, class: "col-sm-12" %>
          <%= f.text_field :nome, class: "form-control" %>
        </div>
        <div class="form-input col-sm-12">
          <%= f.label :descricao, "Descrição", class: "col-sm-2", style: "margin-top: 10px" %>
          <%= f.text_area :descricao, class: "form-control", style: "height: 200px!important" %>
        </div>
        <div class="form-input col-sm-6">
          <%= f.label :grupo_id, "Grupo pai" %>
          <%= f.select :grupo_id, Grupo.all.collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, class: "form-control" %>   
        </div>
        <div class="form-actions col-sm-12">
          <hr>
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
