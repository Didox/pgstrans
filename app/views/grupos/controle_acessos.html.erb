<div class="container scroltable">

  <h4>Perfis de Usu√°rios</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-12">
          <div class="form-group">
            <label>Modelo</label>
            <div>
              <select name="modelo" id="modelo" class="form-control">
                <option value="">Todos</option>
                <% GrupoRegistro.where(grupo_id: @grupo.id).distinct.pluck(:modelo).each do |modelo| %>
                  <option value="<%= modelo %>" <% if params[:modelo] == modelo %> selected="selected" <% end %>>
                    <%= modelo %>
                  </option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
      </div>
        <div class="form-group">
          <div style="float: right;margin-right:10px">
            <input type="submit" value="Buscar" class="btn btn-info">
            <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Voltar
            <% end %>        
          </div>
      </form>
    </div>
  </div>  

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Grupo</th>
          <th scope="col">Modelo</th>
        </tr>
      </thead>

      <tbody>
        <% @grupo_registros.each do |grupo_registro| %>
        <tr>
          <td style="width:150px;overflow:scroll">
            <%= grupo_registro.grupo.nome %><br><br>
            <%= link_to 'Editar', "/grupos/#{@grupo.id}/controle-acessos/#{grupo_registro.id}/edit", class: "btn btn-primary" %>
            <%= link_to 'Apagar', "/grupos/#{@grupo.id}/controle-acessos/#{grupo_registro.id}", method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %>
          </td>
          <td>
            <ul>
              <% grupo_registro.registro.attributes.each do |key, value| %>
                <li><b><%= key %>:</b> <%= value %></li>
              <% end %>
            </ul>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @grupo_registros, :container => false %>
    </div> 
    <br><hr>
    <%= link_to "/grupos", class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>