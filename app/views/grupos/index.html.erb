<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>Grupo</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Descricao</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @grupos.each do |grupo| %>
        <tr>
          <td><%= grupo.nome %></td>
          <td><%= grupo.descricao %></td>
          <td><%= link_to 'Mostrar', grupo %></td>
          <td><%= link_to 'Editar', edit_grupo_path(grupo) %></td>
          <td><%= link_to 'Apagar', grupo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_grupo_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>