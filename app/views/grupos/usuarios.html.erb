<div class="col-md-12">
  <p id="notice"><%= notice %></p>

  <div class="col-md-12">
    <h4>Usuários do Grupo</h4>
  </div>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12 scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome do Usuário</th>
          <th scope="col">E-Mail</th>
          <th scope="col">Permissão de Grupo</th>
          <th scope="col">Descrição Perfil Usuário</th>
          <th scope="col">Criado em</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @grupo_usuarios.each do |grupo_usuario| %>
          <tr>
            <td><%= grupo_usuario.usuario.id %></td>
            <td><%= grupo_usuario.usuario.nome %></td>
            <td><%= grupo_usuario.usuario.email %></td>
            <td><%= grupo_usuario.escrita ? "Leitura e escrita": "Leitura" %></td>
            <td class="text-center">
              <a href="/perfil_usuarios/<%= grupo_usuario.usuario.perfil_usuario.id %>">
                <%= grupo_usuario.usuario.perfil_usuario.nome %>
              </a>
            </td>
            <td><%= grupo_usuario.created_at %></td>
            <td><%= link_to 'Apagar', "/grupos/#{@grupo.id}/usuarios/#{grupo_usuario.usuario.id}", method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @grupo_usuarios, :container => false %>
    </div> 

    <%= link_to "/grupos/#{@grupo.id}/usuarios/new", class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %>     

    <%= link_to 'javascript:history.go(-1)', class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      Voltar
    <% end %>

  </div>
</div>