<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>PagamentosFaturasDstv</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
                    <th scope="col">Request body</th>
                    <th scope="col">Response body</th>
                    <th scope="col">Customer number</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Smartcard</th>
                    <th scope="col">Administrador</th>
                    <th scope="col">Receipt number</th>
                    <th scope="col">Transaction number</th>
                    <th scope="col">Status</th>
                    <th scope="col">Transaction date time</th>
                    <th scope="col">Audit reference number</th>
                    <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pagamentos_faturas_dstvs.each do |pagamentos_faturas_dstv| %>
        <tr>
                    <td><%= pagamentos_faturas_dstv.request_body %></td>
                    <td><%= pagamentos_faturas_dstv.response_body %></td>
                    <td><%= pagamentos_faturas_dstv.customer_number %></td>
                    <td><%= pagamentos_faturas_dstv.valor %></td>
                    <td><%= pagamentos_faturas_dstv.smartcard %></td>
                    <td><%= pagamentos_faturas_dstv.administrador %></td>
                    <td><%= pagamentos_faturas_dstv.receipt_number %></td>
                    <td><%= pagamentos_faturas_dstv.transaction_number %></td>
                    <td><%= pagamentos_faturas_dstv.status %></td>
                    <td><%= pagamentos_faturas_dstv.transaction_date_time %></td>
                    <td><%= pagamentos_faturas_dstv.audit_reference_number %></td>
                    <td><%= link_to 'Mostrar', pagamentos_faturas_dstv %></td>
          <td><%= link_to 'Editar', edit_pagamentos_faturas_dstv_path(pagamentos_faturas_dstv) %></td>
          <td><%= link_to 'Apagar', pagamentos_faturas_dstv, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_pagamentos_faturas_dstv_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>