<div class="container">

  <h4>Mostrar Província</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->  

  <div class="container">
    <dl class="dl-horizontal">
      <dt>Nome:</dt>
      <dd><%= @provincium.nome %></dd>
      <dt>Capital:</dt>
      <dd><%= @provincium.capital %></dd>
      <dt>Área km2:</dt>
      <dd><%= @provincium.area_km2 %></dd>
      <dt>População:</dt>
      <dd><%= @provincium.population %></dd>
      <dt>Mapa:</dt>
      <dd><%= @provincium.image_map %></dd>
      <dt>País:</dt>
      <dd><%= @provincium.country.name_pt %></dd>
    </dl>

    <div class="page-header">
      <%= link_to provincia_path, class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Voltar
      <% end %>
      <%= link_to edit_provincium_path(@provincium), class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
    </div>
  </div>
</div>