<div class="col-md-12" data-target="toggle.grid">
   <div class="card border-simpleform box-shadow mb-4">
      <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
         <div>
            <strong>Dados</strong><br />
         </div>
      </div>
      <div class="border-bootstrap box-shadow mb-4">
         <div class="card-header text-bootstrap align-items-center justify-content-between">
            <%= form_for(@provincium, html: { class: "form-horizontal", role: "form" }) do |f| %>
            <% if @provincium.errors.any? %>
            <div class="alert alert-danger alert-dismissable" role="alert">
               <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
               <h4><%= pluralize(@provincium.errors.count, "erros") %> no provincium, confira abaixo:</h4>
               <ul>
                  <% @provincium.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
               </ul>
            </div>
            <% end %>
            <div class="form-group">
               <%= f.label :nome, class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
                  <%= f.text_field :nome, class: "form-control" %>
               </div>
            </div>
            <div class="form-group">
               <%= f.label :capital, class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
                  <%= f.text_field :capital, class: "form-control" %>
               </div>
            </div>
            <div class="form-group">
               <%= f.label :area_km2, class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
                  <%= f.text_field :area_km2, class: "form-control" %>
               </div>
            </div>
            <div class="form-group">
               <%= f.label :population, class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
                  <%= f.text_field :population, class: "form-control" %>
               </div>
            </div>
            <div class="form-group">
               <%= f.label :image_map, class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
                  <%= f.text_field :image_map, class: "form-control" %>
               </div>
            </div>
            <div class="form-group">
               <%= f.label :country_id, "PaÃ­s", class: "col-sm-2 control-label" %>
               <div class="col-sm-10">
               <%= f.select :country_id, Country.all.collect{|d| [d.name_eng, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>      
               </div>
            </div>
            <div class="form-group">
               <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit "Salvar", class: "btn btn-danger" %>
               </div>
            </div>
            <% end %>
         </div>
      </div>
   </div>
</div>