<div class="container">
  <h4>Provincia</h4>

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">Nome</th>
                <th scope="col">Capital</th>
                <th scope="col">Area km2</th>
                <th scope="col">Population</th>
                <th scope="col">Image map</th>
                <th scope="col">Country</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @provincia.each do |provincium| %>
      <tr>
                <td><%= provincium.nome %></td>
                <td><%= provincium.capital %></td>
                <td><%= provincium.area_km2 %></td>
                <td><%= provincium.population %></td>
                <td><%= provincium.image_map %></td>
                <td><%= provincium.country %></td>
                <td><%= link_to 'Mostrar', provincium %></td>
        <td><%= link_to 'Editar', edit_provincium_path(provincium) %></td>
        <td><%= link_to 'Apagar', provincium, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_provincium_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>