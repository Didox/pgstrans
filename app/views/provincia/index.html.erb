<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Lista de Províncias</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->  
  <div class="col-md-12">
    <form action="" method="get" id="formApuracao">
      <div class="col-sm-3">
        <div class="form-group">
          <label>Nome da Província</label>
          <div>
            <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>Capital da Província</label>
          <div>
            <input type="text" name="capital" value="<%= params[:capital] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>Área em KM</label><sup>2 </sup><label> da Provîncia</label>
          <div>
            <input type="text" name="area_km2" value="<%= params[:area_km2] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>População</label>
          <div>
            <input type="text" name="population" value="<%= params[:population] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">
          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
        </div>
      </div>
    </form>
  </div>
  <div class="col-md-12 scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID do Registo</th>
          <th scope="col">Nome</th>
          <th scope="col">Capital</th>
          <th scope="col">Área em KM<sup>2</sup></th>
          <th scope="col">População</th>
          <th scope="col">País</th>
          <th colspan="3">Ações para o Registo</th>
        </tr>
      </thead>

      <tbody>
        <% @provincia.each do |provincium| %>
        <tr>
          <td class="text-center"><%= provincium.id %></td>
          <td><%= provincium.nome %></td>
          <td><%= provincium.capital %></td>
          <td align="right"><%= number_with_delimiter(provincium.area_km2, delimiter: ".") %></td>
          <td align="right"><%= number_with_delimiter(provincium.population, delimiter: ".") %></td>          
          <td><%= provincium.country.name_pt %></td>
          <td><%= link_to 'Mostrar', provincium %></td>
          <td><%= link_to 'Editar', edit_provincium_path(provincium) %></td>
          <td><%= link_to 'Apagar', provincium, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @provincium, :container => false %>
    </div> 

    <%= link_to new_provincium_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %>    
    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>
