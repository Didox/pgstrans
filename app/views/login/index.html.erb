<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
        <h1>Entrar</h1>
    </div>
    <div class="panel-body">
        <h3 class="text-center" style="font-size: 28px;margin-top: 20px;">
          Mais vantagens para vocÃª <strong>VENDER MAIS!</strong>
        </h3>

        <div class="col-md-12">
          <div id="formContent">
            <form action="/autentica" method="post">
              <div class="form-group row">
                  <label for="email_address" class="col-md-4 col-form-label text-md-right">Login ou E-Mail</label>
                  <div class="col-md-6">
                    <input type="text" id="email" class="form-control" name="email" required autofocus>
                  </div>
              </div>

              <div class="form-group row">
                <label for="password" class="col-md-4 col-form-label text-md-right">Palavra-passe</label>
                <div class="col-md-6">
                    <input type="password" id="senha" class="form-control" name="senha" required="">
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-6 offset-md-4">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="remember"> Lembre-se de mim!
                    </label>
                  </div>
                  <!-- recaptcha_tags -->
                  <div>

                    <%= button_tag(type: 'submit', class: "fadeIn fourth btn-block btn-success btn-login") do %>
                        <span class="glyphicon glyphicon-new-window"></span> Aceder
                    <% end %>                  

                  </div>
                </div>
              </div>

              <% if flash[:error].present? %>
                <div class="alert alert-danger alert-dismissable col-md-12" role="alert">
                  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                  <ul>
                    <li><%= flash[:error] %></li>
                  </ul>
                </div>
              <% elsif flash[:notice].present? %>
                <div class="alert alert-success alert-dismissable col-md-12" role="alert">
                  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                  <ul>
                    <li><%= flash[:notice] %></li>
                  </ul>
                </div>
              <% end %>

              <div class="col-md-12">
                Precisa de ajuda? 
                <br>+244 944.090.151 - 998.090.151/152/153<br>
                <%= link_to 'Primeiro Acesso?', "/primeiro-acesso" %><br>
                <%= link_to 'Password esquecida?', "/password-esquecida" %>
              </div>
            </form>
          </div>
        </div>
        <div id="ContatoWhatsapp" style="position: fixed; top: calc(100% - 80px); right: 5px;">
          <a href="https://wa.me/244931489997" target="_blank" title="Como podemos ajudar?">
          <img src="assets/whatsapp.png" style="width: 60px;background: transparent;">
        </a>
    </div>
  </div>
</div>