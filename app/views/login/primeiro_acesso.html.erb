<div class="container">
  <div class="col-md-12 panel panel-default">
    <div class="panel-heading">
        <h1>Primeiro Acesso</h1>
    </div>
    <div class="panel-body">
        <h3 style="font-size: 28px;margin-top: 20px;">Mais vantagens para vocÃª <strong>VENDER MAIS!</strong></h3>

        <div class="container">
            <div id="formContent">
              <form action="/password-esquecida" method="post">
                <h3>
                  Informe o seu e-mail para definir a palavra-passe
                </h3>
                
                <div class="form-group row">
                  <label for="email" class="col-md-4 col-form-label text-md-right">E-mail</label>
                  <div class="col-md-6">
                    <input type="email" id="senha" class="form-control" name="email" required="">
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-6 offset-md-4">
                    <input type="submit" class="fadeIn fourth btn-block btn-success btn-login" value="Enviar">
                    <a href="/" class="fadeIn fourth btn-block btn-info btn-voltar">
                      Voltar
                    </a>
                  </div>
                </div>

                <% if flash[:error].present? %>
                  <div class="alert alert-danger alert-dismissable col-md-12" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                    <ul>
                      <li><%= flash[:error] %></li>
                    </ul>
                  </div>
                <% end %>
            </form>
          </div>
        </div>
    </div>
  </div>
</div>