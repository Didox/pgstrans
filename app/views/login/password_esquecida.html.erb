<div class="container">
  <div class="col-md-12 panel panel-default">
    <div class="panel-heading">
        <h1>Alteração de senha</h1>
    </div>
    <div class="panel-body">
        <div class="col-md-4">
          <img class="img-responsive" data-image="assets/images/Mascote_270x228.png">
            <%= link_to image_tag("Mascote_270x228.png")%>
          </img>
        </div>
        <h3 style="font-size: 28px;margin-top: 20px;">Mais vantagens para você <strong>VENDER MAIS!</strong></h3>

        <div class="container">
            <div id="formContent">
              <form action="/password-esquecida" method="post">
                <h3>
                  Informe o seu e-mail para recuperar
                </h3>
                
                <div class="form-group row">
                  <label for="email" class="col-md-4 col-form-label text-md-right">E-mail</label>
                  <div class="col-md-6">
                    <input type="email" id="senha" class="form-control" name="email" required="">
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-6 offset-md-4">
                    <div>
                      <input type="submit" class="fadeIn fourth btn-block btn-success btn-login" value="Enviar">
                    </div>
                  </div>
                </div>

                <% if flash[:error].present? %>
                  <div class="alert alert-danger alert-dismissable col-md-offset-4" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                    <ul>
                      <li><%= flash[:error] %></li>
                    </ul>
                  </div>
                <% end %>
            </form>
          </div>
        </div>
    </div>
  </div>
</div>