<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>Ramos de Atividade</h3>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Descrição Seccao</th>
          <th scope="col">Descrição Divisão</th>
          <th scope="col">Descrição Grupo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @industries.each do |industry| %>
          <tr>
            <td><%= industry.descricao_seccao %></td>
            <td><%= industry.descricao_divisao %></td>
            <td><%= industry.descricao_grupo %></td>
            <td><%= link_to 'Mostrar', industry %></td>
            <td><%= link_to 'Editar', edit_industry_path(industry) %></td>
            <td><%= link_to 'Apagar', industry, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_industry_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to root_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>

  </div>
</div>