<div class="container scroltable">

  <h3>Lista de Actividades Económicas</h3>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Descrição Secção</th>
          <th scope="col">Descrição Divisão</th>
          <th scope="col">Descrição Grupo</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @industries.each do |industry| %>
          <tr>
            <td style="width: 300px;"><%= industry.descricao_seccao %></td>
            <td style="width: 300px;"><%= industry.descricao_divisao %></td>
            <td style="width: 300px;"><%= industry.descricao_grupo %></td>
            <td><%= link_to 'Mostrar', industry %></td>
            <td><%= link_to 'Editar', edit_industry_path(industry) %></td>
            <td><%= link_to 'Apagar', industry, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @industries, :container => false %>
    </div> 

    <%= link_to new_industry_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>

  </div>
</div>