<div class="col-md-12 scroltable">
	<div class="col-md-12">
		<h3>Detalhe de Registo de Atividade Econômica</h3>
	</div>
	<!-- Page Heading/Breadcrumbs -->
	<%= render :partial => 'shared/header_backoffice' %>
	<!-- /.row -->
	<div class="col-md-12">
		<p>
		  <strong>Descrição da Secção:</strong>
		  <%= @industry.descricao_seccao %>
		</p>
		<hr>
		<p>
		  <strong>Descrição da Divisão:</strong>
		  <%= @industry.descricao_divisao %>
		</p>
		<hr>
		<p>
		  <strong>Descrição do Grupo:</strong>
		  <%= @industry.descricao_grupo %>
		</p>
		<hr>
	    <%= link_to edit_industry_path(@industry), class: 'btn btn-danger' do %>
	      	<span class="glyphicon glyphicon-edit"></span>
	      	Editar
	    <% end %>
		<%= link_to industries_path, class: 'btn btn-danger' do %>
			<span class="glyphicon glyphicon-list-alt"></span>
			Voltar
		<% end %>
	</div>
</div>