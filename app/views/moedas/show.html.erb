<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Detalhe da Moeda</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->  
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Nome:</dt>
      <dd><%= @moeda.nome %></dd>
      <dt>Codigo iso:</dt>
      <dd><%= @moeda.codigo_iso %></dd>
      <dt>Simbolo:</dt>
      <dd><%= @moeda.simbolo %></dd>
      <dt>Pa√≠s:</dt>
      <dd><%= "#{@moeda.country_id}/#{@moeda.country.name_pt}" %></dd>
    </dl>

    <div class="col-md-12">
      <%= link_to 'javascript:history.go(-1)', class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Voltar
      <% end %>
      <%= link_to edit_moeda_path(@moeda), class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
    </div>
  </div>
</div>