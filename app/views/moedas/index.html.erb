<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Lista de Moedas</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Código ISO</th>
          <th scope="col">Símbolo</th>
          <th scope="col">País</th>
          <th colspan="3">Ações para o Registo</th>
        </tr>
      </thead>
      <tbody>
        <% @moedas.each do |moeda| %>
        <tr>
          <td><%= moeda.nome %></td>
          <td><%= moeda.codigo_iso %></td>
          <td><%= moeda.simbolo %></td>
          <td><%= "#{moeda.country_id}/#{moeda.country.name_pt}" %></td>
          <td><%= link_to 'Mostrar', moeda %></td>
          <td><%= link_to 'Editar', edit_moeda_path(moeda) %></td>
          <td><%= link_to 'Apagar', moeda, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @moedas, :container => false %>
    </div> 

    <%= link_to new_moeda_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>