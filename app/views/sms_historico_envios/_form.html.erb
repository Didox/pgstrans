<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@sms_historico_envio, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @sms_historico_envio.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@sms_historico_envio.errors.count, "erros") %> no sms_historico_envio, confira abaixo:</h4>

            <ul>
            <% @sms_historico_envio.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

                  <div class="form-input col-sm-6">
            <%= f.label :numero, class: "col-sm-2 control-label" %>
            <%= f.text_field :numero, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :conteudo, class: "col-sm-2 control-label" %>
            <%= f.text_area :conteudo, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :usuario, class: "col-sm-2 control-label" %>
            <%= f.text_field :usuario, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :venda_id, class: "col-sm-2 control-label" %>
            <%= f.text_field :venda_id, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :sucesso, class: "col-sm-2 control-label" %>
            <%= f.check_box :sucesso, class: "form-control" %>
          </div>
                <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
