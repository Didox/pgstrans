<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <h3>Parâmetros de Integração</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div class="col-md-12 scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Parceiro</th>
          <th scope="col">URL Integração em Desenvolvimento</th>
          <th scope="col">URL Integração em Produção</th>
          <th colspan="3">Ações para o Registo</th>
        </tr>
      </thead>

      <tbody>
        <% @parametros.each do |parametro| %>
        <tr>
          <td><%= parametro.partner.name %></td>
          <td><%= parametro.url_integracao_desenvolvimento %></td>
          <td><%= parametro.url_integracao_producao %></td>
          <td><%= link_to 'Mostrar', parametro %></td>
          <td><%= link_to 'Editar', edit_parametro_path(parametro) %></td>
          <td><%= link_to 'Apagar', parametro, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @parametros, :container => false %>
    </div>    

    <%= link_to new_parametro_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %> 

  </div>
</div>
