<div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12"> 
    <div class="card" style="margin-top: 5px;">
      <div class="card-header">
        <div class="col-md-12" style="margin-bottom: 20px;font-weight: bold">
          Consulta Código de Voucher
        </div>
        <% if @info.blank? %>
          <div class="card-body">
            <form action="/elephant_bet/consultar_voucher" method="get">

              <div class="col-md-12">
                <div style="background-color: #F2F3F4;padding: 10px;color: #000;">
                  <h3>Informe a</h3>
                  <div style="margin-left: 4%;">Referência da Transação</div>
                  <input type="text" class="form-control" value="<%= params[:transaction_reference] %>" name="transaction_reference" placeholder="Referëncia da Transação" style="margin-left: 4%;max-width: 300px;">
                  <% if usuario_logado.admin? %>
                    <h3>ou o</h3>
                    <div style="margin-left: 4%;">Código do Pagamento</div>
                    <input type="text" class="form-control" value="<%= params[:payment_code] %>" name="payment_code" placeholder="Código de Pagamento" style="margin-left: 4%;max-width: 300px;">
                  <% end %>
                </div>
                <div class="saveCancelbts" style="padding-top: 25px;padding-bottom: 25px;text-align: right;">
                  <div style="display: inline-block;margin-bottom: 10px;">
                    <input type="submit" class="btn btn-success" style="width: 150px; text-align: center;" value="Confirmar">
                  </div>
                  <div style="display: inline-block;margin-bottom: 10px;">
                    <%= link_to root_path, class: 'btn btn-space btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
                      <span class="glyphicon glyphicon-arrow-left"></span>
                      Voltar
                    <% end %>
                  </div>
                </div>
              </div>
            </form>
          </div>
        <% else %>
          <%= render "/elephant_bet/venda_recibo", info: @info, title: "Recibo de Confirmação de Transação", venda: @venda, url: "/elephant_bet/consultar_voucher/mini?transaction_reference=#{params[:transaction_reference]}&payment_code=#{params[:payment_code]}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
