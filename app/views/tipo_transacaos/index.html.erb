<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h4>Tipos de Transações</h4>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div class="col-md-12 scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" class="text-center">ID do Registo</th>
          <th scope="col">Nome</th>
          <th colspan="2">Ações para o Registo</th>
        </tr>
      </thead>

      <tbody>
        <% @tipo_transacaos.each do |tipo_transacao| %>
        <tr>
          <td class="text-center"><%= tipo_transacao.id %></td>
          <td><%= tipo_transacao.nome %></td>
          <td><%= link_to 'Editar', edit_tipo_transacao_path(tipo_transacao) %></td>
          <td><%= link_to 'Apagar', tipo_transacao, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @tipo_transacaos, :container => false %>
    </div> 

    <%= link_to new_tipo_transacao_path, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      Voltar
    <% end %>
  </div>
</div>