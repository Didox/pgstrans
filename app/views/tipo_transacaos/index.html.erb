<div class="container">
  <h4>Tipos de Transações</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tipo_transacaos.each do |tipo_transacao| %>
        <tr>
          <td><%= tipo_transacao.id %></td>
          <td><%= tipo_transacao.nome %></td>
          <td><%= link_to 'Mostrar', tipo_transacao %></td>
          <td><%= link_to 'Editar', edit_tipo_transacao_path(tipo_transacao) %></td>
          <td><%= link_to 'Apagar', tipo_transacao, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_tipo_transacao_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to root_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>