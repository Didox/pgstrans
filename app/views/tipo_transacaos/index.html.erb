<div class="container">
  <h4>TipoTransacaos</h4>

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">Nome</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tipo_transacaos.each do |tipo_transacao| %>
      <tr>
                <td><%= tipo_transacao.nome %></td>
                <td><%= link_to 'Mostrar', tipo_transacao %></td>
        <td><%= link_to 'Editar', edit_tipo_transacao_path(tipo_transacao) %></td>
        <td><%= link_to 'Apagar', tipo_transacao, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_tipo_transacao_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>