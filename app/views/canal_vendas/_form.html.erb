<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@canal_venda, html: { class: "form-vertical", role: "form" }) do |f| %>
        <% if @canal_venda.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@canal_venda.errors.count, "erros") %> no canal_venda, confira abaixo:</h4>

            <ul>
            <% @canal_venda.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-input col-sm-4">
          <%= f.input :nome, placeholder: "Nome do canal de venda" %>
        </div>

        <div class="form-input col-sm-4">
          <%= f.input :carregamento_minimo, :label => "Carregamento Mínimo", placeholder: "Carregamento mínimo no credenciamento do agente" %>
        </div>
 
        <div class="form-input col-sm-4">
          <%= f.label :dispositivo_id, "Dispositivo" %>
          <%= f.select :dispositivo_id, Dispositivo.all.collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>   
        </div>

        <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>