<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>Conta Corrente</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Dados</th>
          <th scope="col">Valor KZ</th>
          <th scope="col">Data do Lançamento</th>
          <th scope="col">Saldo Anterior</th>
          <th scope="col">Saldo Atual</th>
          <th scope="col">Última Atualiz.</th>
          <th scope="col">Observação</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @conta_correntes.each do |conta_corrente| %>
        <tr>
          <td>
            <b>Usuario:</b> <%= conta_corrente.usuario.nome %><br>
            <b>Lançamento:</b> <%= conta_corrente.lancamento.nome %><br>
            <b>Banco:</b> <%= conta_corrente.banco.nome %><br>
            <b>IBAN:</b> <%= conta_corrente.iban %><br>
            <b>Observação:</b> <%= conta_corrente.observacao %>
          </td>
          <td><%= conta_corrente.valor %></td>
          <td><%= conta_corrente.data_alegacao_pagamento.strftime("%d/%m/%Y %H:%M") rescue "" %></td>
          <td><%= conta_corrente.saldo_anterior %></td>
          <td><%= conta_corrente.saldo_atual %></td>
          <td><%= conta_corrente.data_ultima_atualizacao_saldo.strftime("%d/%m/%Y %H:%M") rescue "" %></td>
          
          <td><%= link_to 'Mostrar', conta_corrente %></td>
          <% if usuario_logado.admin? %>
            <td><%= link_to 'Editar', edit_conta_corrente_path(conta_corrente) %></td>
            <td><%= link_to 'Apagar', conta_corrente, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_conta_corrente_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>