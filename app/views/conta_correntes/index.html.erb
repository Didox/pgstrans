<div class="container scroltable">

  <h4>Conta Corrente</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-2">
          <div class="form-group">
            <label>Data de Lançamento</label>
            <div>
              <input type="date" name="dala_lancamento" value="<%= params[:dala_lancamento] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Última Atualização</label>
            <div>
              <input type="date" name="data_ultima_atualizacao_saldo" value="<%= params[:data_ultima_atualizacao_saldo] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Usuário</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Responsável</label>
            <div>
              <input type="text" name="responsavel" value="<%= params[:responsavel] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>IBAN</label>
            <div>
              <input type="text" name="iban" value="<%= params[:iban] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">

          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
          
        </div>
      </div>
    </form>
  </div>

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Dados</th>
          <th scope="col">Valores</th>
          <th scope="col">Datas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @conta_correntes.each do |conta_corrente| %>
        <tr>
          <td style="width: 250px">
            <b>Usuario:</b> <%= conta_corrente.usuario.nome %><br>
            <b>Lançamento:</b> <%= conta_corrente.lancamento.nome %><br>
            <b>Banco:</b> <%= conta_corrente.banco.nome %><br>
            <b>IBAN:</b> <%= conta_corrente.iban %><br>
            <b>Observação:</b> <%= conta_corrente.observacao %><br>
            <% if conta_corrente.responsavel_aprovacao.present? %>
              <b>Responsavel aprovação:</b> <%= conta_corrente.responsavel_aprovacao.nome %>
            <% end %>
          </td>
          <td style="width: 300px">
            <b>Valor do lançamento:</b> <%= number_to_currency(conta_corrente.valor, :unit => "KZ") %><br>
            <b>Saldo Atual:</b> <%= number_to_currency(conta_corrente.saldo_atual, :unit => "KZ") %><br>
            <b>Saldo Anterior:</b> <%= number_to_currency(conta_corrente.saldo_anterior, :unit => "KZ") %><br>
          </td>
          <td style="width: 350px">
            <b>Data do Lançamento:</b> <%= conta_corrente.data_alegacao_pagamento.strftime("%d/%m/%Y %H:%M") %><br>
            <b>Última Atualização:</b> <%= conta_corrente.data_ultima_atualizacao_saldo.strftime("%d/%m/%Y %H:%M") %><br>
          </td>
          <td><%= link_to 'Mostrar', conta_corrente %></td>
          <% if usuario_logado.admin? || usuario_logado.operador? %>
            <td><%= link_to 'Editar', edit_conta_corrente_path(conta_corrente) %></td>
            <td><%= link_to 'Apagar', conta_corrente, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @conta_correntes, :container => false %>
    </div>

    <%= link_to new_conta_corrente_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>    
  </div>
</div>