<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@conta_corrente, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @conta_corrente.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@conta_corrente.errors.count, "erros") %> no conta_corrente, confira abaixo:</h4>

            <ul>
            <% @conta_corrente.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

                  <div class="form-input col-sm-6">
            <%= f.label :usuario, class: "col-sm-2 control-label" %>
            <%= f.text_field :usuario, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :lancamento, class: "col-sm-2 control-label" %>
            <%= f.text_field :lancamento, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :banco, class: "col-sm-2 control-label" %>
            <%= f.text_field :banco, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :valor, class: "col-sm-2 control-label" %>
            <%= f.text_field :valor, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :iban, class: "col-sm-2 control-label" %>
            <%= f.text_field :iban, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :data_alegacao_pagamento, class: "col-sm-2 control-label" %>
            <%= f.datetime_select :data_alegacao_pagamento, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :saldo_anterior, class: "col-sm-2 control-label" %>
            <%= f.text_field :saldo_anterior, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :saldo_atual, class: "col-sm-2 control-label" %>
            <%= f.text_field :saldo_atual, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :data_ultima_atualizacao_saldo, class: "col-sm-2 control-label" %>
            <%= f.datetime_select :data_ultima_atualizacao_saldo, class: "form-control" %>
          </div>
                <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
