<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Lista de Saldo de Usuários</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12" style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-3">
          <div class="form-group">
            <label>Login</label>
            <div>
              <input type="text" name="login" value="<%= params[:login] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-9">
          <div class="form-group">
            <label>Usuário</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">
          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>        
        </div>
      </div>
    </form>
  </div>
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID do Registo</th>
          <th scope="col">Login<br>Usuário</th>
          <th scope="col">Nome do Usuário</th>
          <th scope="col">Telefone <br>do Usuário</th>
          <th scope="col">Nome do Agente</th>
          <th scope="col">Telefone do Agente</th>
          <th scope="col">Município</th-->
          <th scope="col" align="right">Saldo</th>
          <th scope="col" align="right"></th>
        </tr>
      </thead>

      <tbody>
        <% valor_total = 0 %>
        <% @usuarios.each do |usuario| %>
        <tr>
          <td style="width: 25px" align="right"><%= usuario.id %></td>
          <td style="width: 100px"><%= usuario.login %></td>
          <td style="width: 400px"><%= usuario.nome %></td>
          <td style="width: 260px" class="text-right"><%= usuario.telefone %></td>
          <td style="width: 400px"><%= usuario.sub_agente.nome_fantasia rescue "" %></td>
          <td style="width: 260px" class="text-right"><%= usuario.sub_agente.telefone rescue "" %></td>
          <td style="width: 150px"><%= usuario.municipio.nome rescue "" %></td>
          <td style="width: 160px" align="right"><%= number_to_currency(usuario.saldo, :unit => "KZ", :precision => 2) %></td>
          <td style="width: 100px" align="right">
            <form action="/usuarios/<%= usuario.id %>/zerar_saldo" onsubmit="return confirm('Confirma?')" method="post">
                <button type="submit" class="btn btn-warning">Zerar Saldo</button>
            </form>
          </td>
        </tr>
          <% valor_total += usuario.saldo %>
        <% end %>
        <tfoot>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td align="right"><b>Total:</b></td>
            <td style="width:110px" align="right">
              <b><%= number_to_currency(valor_total) %></b>
            </td>              
          </tr>
        </tfoot>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @usuarios, :container => false %>
    </div>

    <%= link_to "index_carregamento_usuario", class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Lista de Carregamento
    <% end %>
    <%= link_to conta_correntes_path, class: 'btn btn-dark' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Creditar Conta  Corrente
    <% end %>
    <%= link_to 'javascript:history.go(-1)', class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>    
  </div>
</div>