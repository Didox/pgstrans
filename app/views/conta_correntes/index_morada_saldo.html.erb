<div class="container scroltable">

  <h4>Usuário / Morada / Saldo</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-3">
          <div class="form-group">
            <label>Usuário/Cliente</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Morada</label>
            <div>
              <input type="text" name="morada" value="<%= params[:morada] %>" class="form-control">
            </div>
          </div>
        </div>     
        <div class="col-sm-2">
          <div class="form-group">
            <label>IBAN</label>
            <div>
              <input type="text" name="iban" value="<%= params[:iban] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">

          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
          
        </div>
      </div>
    </form>
  </div>

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Morada</th>
          <th scope="col">Bairro</th>
          <th scope="col">Município</th>
          <th scope="col">IBAN</th>
          <th scope="col">Saldo</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @conta_correntes.each do |conta_corrente| %>
        <tr>
          <td style="width: 250px"><%= conta_corrente.usuario.nome %></td>
          <td style="width: 250px"><%= conta_corrente.usuario.morada %></td>
          <td style="width: 250px"><%= conta_corrente.usuario.bairro %></td>
          
          <td style="width: 250px"><%= conta_corrente.iban %></td>
          <td style="width: 250px"><%= number_to_currency(conta_corrente.saldo_atual, :unit => "KZ") %></td>
          <td>
            <%= link_to 'Mostrar', conta_corrente %>
          </td>
          <% if usuario_logado.admin? || usuario_logado.operador? %>
            <td><%= link_to 'Editar', edit_conta_corrente_path(conta_corrente) %></td>
            <td><%= link_to 'Apagar', conta_corrente, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @conta_correntes, :container => false %>
    </div>

    <%= link_to new_conta_corrente_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>    
  </div>
</div>