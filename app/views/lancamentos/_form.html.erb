<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>
  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@lancamento, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @lancamento.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@lancamento.errors.count, "erros") %> no lancamento, confira abaixo:</h4>

            <ul>
            <% @lancamento.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-input col-sm-12">
          <%= f.input :nome, placeholder: "Nome do lançamento" %>
        </div>

        <div class="form-input col-sm-6">
            <%= f.label :status, :label => raw("Marque se situação é <strong>ATIVA</strong> e deve estar visível para os usuários") %>
            <%= f.check_box :status %>
        </div>
    
        <div class="form-actions">
          <%= f.button :button, class: 'btn btn-success' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
