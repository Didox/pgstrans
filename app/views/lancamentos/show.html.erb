<h4>Mostrar Lancamento</h4>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @lancamento.nome %></dd>
</dl>

<div class="page-header">
  <%= link_to lancamentos_path, class: 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_lancamento_path(@lancamento), class: 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
</div>