<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h4>Lista de Dispositivos</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Marca</th>
          <th scope="col">Modelo</th>
          <th scope="col">Número Série</th>
          <th scope="col">Macaddr</th>
          <th scope="col">IMEI</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dispositivos.each do |dispositivo| %>
        <tr>
          <td><%= dispositivo.id %></td>
          <td><%= dispositivo.nome %></td>
          <td><%= dispositivo.marca %></td>
          <td><%= dispositivo.modelo %></td>
          <td><%= dispositivo.numero_serie %></td>
          <td><%= dispositivo.macaddr %></td>
          <td><%= dispositivo.imei %></td>
          <td><%= link_to 'Mostrar', dispositivo %></td>
          <td><%= link_to 'Editar', edit_dispositivo_path(dispositivo) %></td>
          <td><%= link_to 'Apagar', dispositivo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_dispositivo_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to root_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>