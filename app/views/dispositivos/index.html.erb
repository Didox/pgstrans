<div class="container scroltable">
  
  <h4>Lista de Dispositivos</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Marca / Modelo</th>
          <th scope="col">Características Técnicas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dispositivos.each do |dispositivo| %>
        <tr>
          <td style="width: 400px">
            <b>ID:</b> <%= dispositivo.id %><br>
            <b>Nome:</b> <%= dispositivo.nome %><br>
            <b>Marca:</b> <%= dispositivo.marca %><br>
            <b>Modelo:</b> <%= dispositivo.modelo %><br>
            <b>Número de Série:</b> <%= dispositivo.numero_serie %><br>
            <b>Tamanho de Ecrã:</b> <%= dispositivo.screensize %><br>
            <b>Macaddr:</b> <%= dispositivo.macaddr %><br>
          </td>
          <td style="width: 400px">
            <b>IMEI 1:</b> <%= dispositivo.imei %><br>
            <b>IMEI 2:</b> <%= dispositivo.imei2 %><br> 
            <b>RATED / Potência:</b> <%= dispositivo.rated %><br>
            <b>Sistema Operativo:</b> <%= dispositivo.so %><br>
            <b>Armazenamento RAM / ROM:</b> <%= dispositivo.ram_rom %><br>
            <b>Conectividade:</b> <%= dispositivo.conectividade %><br>
          </td>
          <td><%= link_to 'Mostrar', dispositivo %></td>
          <td><%= link_to 'Editar', edit_dispositivo_path(dispositivo) %></td>
          <td><%= link_to 'Apagar', dispositivo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_dispositivo_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>