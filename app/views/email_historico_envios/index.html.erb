<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>EmailHistoricoEnvio</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Conteudo</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Venda</th>
                    <th scope="col">Sucesso</th>
                    <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @email_historico_envios.each do |email_historico_envio| %>
        <tr>
                    <td><%= email_historico_envio.email %></td>
                    <td><%= email_historico_envio.titulo %></td>
                    <td><%= email_historico_envio.conteudo %></td>
                    <td><%= email_historico_envio.usuario %></td>
                    <td><%= email_historico_envio.venda_id %></td>
                    <td><%= email_historico_envio.sucesso %></td>
                    <td><%= link_to 'Mostrar', email_historico_envio %></td>
          <td><%= link_to 'Editar', edit_email_historico_envio_path(email_historico_envio) %></td>
          <td><%= link_to 'Apagar', email_historico_envio, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_email_historico_envio_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>