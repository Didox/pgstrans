<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@venda, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @venda.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@venda.errors.count, "erros") %> no venda, confira abaixo:</h4>

            <ul>
            <% @venda.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

                  <div class="form-input col-sm-6">
            <%= f.label :product_id, class: "col-sm-2 control-label" %>
            <%= f.text_field :product_id, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :agent_id, class: "col-sm-2 control-label" %>
            <%= f.text_field :agent_id, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :store_id, class: "col-sm-2 control-label" %>
            <%= f.text_field :store_id, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :seller_id, class: "col-sm-2 control-label" %>
            <%= f.text_field :seller_id, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :terminal_id, class: "col-sm-2 control-label" %>
            <%= f.text_field :terminal_id, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :value, class: "col-sm-2 control-label" %>
            <%= f.text_field :value, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :client_msisdn, class: "col-sm-2 control-label" %>
            <%= f.text_field :client_msisdn, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :request_send, class: "col-sm-2 control-label" %>
            <%= f.text_area :request_send, class: "form-control" %>
          </div>
                  <div class="form-input col-sm-6">
            <%= f.label :response_get, class: "col-sm-2 control-label" %>
            <%= f.text_area :response_get, class: "form-control" %>
          </div>
          
          <!--div class="form-actions col-sm-12">
          <%#= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <%# end %>
          </div-->
      <% end %>
    </div>
  </div>
</div>
