<div class="col-md-12">
  <div class="col-md-12">
    <h3>Vendas</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12" style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-2">
          <div class="form-group">
            <label>ID da Venda</label>
            <div>
              <input type="text" name="venda_id" value="<%= params[:venda_id] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-10">
          <div class="form-group">
            <label>Log transação Ex: (Request_ID, saleTimestamp)</label>
            <div>
              <input type="text" name="log" value="<%= params[:log] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Status da Venda</label>
            <div>
              <select name="return_code" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <option value="sucesso" <% if params[:return_code] == "sucesso" %> selected="selected" <% end %>>Todos com sucesso</option>
                <% Partner.where(status_parceiro_id: 1).each do |partner| %>
                  <optgroup label="<%= partner.name %>">
                    <% ReturnCodeApi.where(partner_id: partner.id).each do |ret| %>
                      <option value="<%= ret.id %>" <% if ret.id.to_s == params[:return_code] %> selected="selected" <% end %> ><%= ret.partner.name %> - <%= ret.sucesso ? "[SUCESSO] - " : "" %><%= ret.error_description_pt %></option>
                    <% end %>
                  </optgroup>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Data Inicial</label>
            <div>
              <input type="date" name="data_inicio" value="<%= params[:data_inicio] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Data Final</label>
            <div>
              <input type="date" name="data_fim" value="<%= params[:data_fim] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-12">
          <div class="form-group">
            <label>Usuário</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Parceiro</label>
            <div>
              <select name="parceiro_id" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Partner.all.each do |partner| %>
                  <option value="<%= partner.id %>" <% if partner.id.to_s == params[:parceiro_id] %> selected="selected" <% end %> ><%= partner.name %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Código Produto Pagasó</label>
            <div>
              <input type="text" name="produto_id" value="<%= params[:produto_id] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Código Produto Parceiro</label>
            <div>
              <input type="text" name="produto_id_parceiro" value="<%= params[:produto_id_parceiro] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Agente</label>
            <div>
              <input type="text" name="agente" value="<%= params[:agente] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Store</label>
            <div>
              <input type="text" name="store" value="<%= params[:store] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Seller</label>
            <div>
              <input type="text" name="seller" value="<%= params[:seller] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Valor</label>
            <div>
              <input type="text" name="valor" value="<%= params[:valor] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Customer Number/MSIDN/Device Number</label>
            <div>
              <input type="text" name="client_msisdn" value="<%= params[:client_msisdn] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <label>
            Exportar CSV <input type="checkbox" name="csv"> 
          </label>
          <input type="submit" value="Buscar" class="btn btn-success">
          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-12">
    <% if Venda.total_acesso(@adm, @vendas_graficos) > 0 %>
      <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
      <script type="text/javascript">
        google.charts.load("current", {packages:["corechart"]});
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
          var data = google.visualization.arrayToDataTable([
            ['Operadora', 'Vendas'],
            <% Partner.where(status_parceiro_id: 1).each do |partner| %>
              ['<%= partner.name %>',  <%= partner.total_vendas_acesso(@adm, @vendas_graficos) %>],
            <% end %>
          ]);

          var options = {
            title: 'Total de vendas ou recargas',
            is3D: true,
          };

          var chart = new google.visualization.PieChart(document.getElementById('grafico_vendas'));
          chart.draw(data, options);
        }
      </script>
      <div id="grafico_vendas" style="width: 100%; height: 300px;"></div>
    <% end %>
  </div>

  <div class="col-md-12">
    <%= render "tabela_vendas" %>

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>