<div class="container">
  <h4>Venda</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Status</label>
            <div>
              <select name="return_code" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% ReturnCodeApi.all.each do |ret| %>
                  <option value="<%= ret.return_code %>" <% if ret.return_code == params[:return_code] %> selected="selected" <% end %> ><%= ret.return_description %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Data inicial</label>
            <div>
              <input type="date" name="data_inicio" value="<%= params[:data_inicio] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Data final</label>
            <div>
              <input type="date" name="data_fim" value="<%= params[:data_fim] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" class="btn btn-info" value="Buscar" onclick="$('#tipo_retorno').val('');$('#formApuracao').removeAttr('target')">
        </div>
      </div>
    </form>
  </div>

  <div class="container" style="width: 100%;overflow: scroll;">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Usuario</th>
          <th scope="col">Parceiro</th>
          <th scope="col">Data</th>
          <th scope="col">Status</th>
          <th scope="col">Product</th>
          <th scope="col">Agent</th>
          <th scope="col">Store</th>
          <th scope="col">Seller</th>
          <th scope="col">Terminal</th>
          <th scope="col">Value</th>
          <th scope="col">Client msisdn</th>
          <th scope="col">Request send</th>
          <th scope="col">Response get</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @vendas.each do |venda| %>
        <tr>
          <td><%= venda.usuario.nome %></td>
          <td><%= venda.partner.name %></td>
          <td><%= venda.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= venda.status_desc.error_description_pt %></td>
          <td><%= venda.product_id %></td>
          <td><%= venda.agent_id %></td>
          <td><%= venda.store_id %></td>
          <td><%= venda.seller_id %></td>
          <td><%= venda.terminal_id %></td>
          <td><%= venda.value %></td>
          <td><%= venda.client_msisdn %></td>
          <td><%= venda.request_send %></td>
          <td><%= venda.response_get %></td>
          <td><%= link_to 'Mostrar', venda %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_venda_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>