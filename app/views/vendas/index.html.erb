<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>Venda</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Agent</th>
                    <th scope="col">Store</th>
                    <th scope="col">Seller</th>
                    <th scope="col">Terminal</th>
                    <th scope="col">Value</th>
                    <th scope="col">Client msisdn</th>
                    <th scope="col">Request send</th>
                    <th scope="col">Response get</th>
                    <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @vendas.each do |venda| %>
        <tr>
                    <td><%= venda.product_id %></td>
                    <td><%= venda.agent_id %></td>
                    <td><%= venda.store_id %></td>
                    <td><%= venda.seller_id %></td>
                    <td><%= venda.terminal_id %></td>
                    <td><%= venda.value %></td>
                    <td><%= venda.client_msisdn %></td>
                    <td><%= venda.request_send %></td>
                    <td><%= venda.response_get %></td>
                    <td><%= link_to 'Mostrar', venda %></td>
          <td><%= link_to 'Editar', edit_venda_path(venda) %></td>
          <td><%= link_to 'Apagar', venda, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_venda_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>