
<select class="rechargeType form-control validate v<%= partner.slug %>" name="<%= partner.slug.downcase %>_produto_id" data-message="Selecione um produto">
  <option value="">Escolher</option>
  <% ["VOZ", "PLANO MAIS", "DADOS", "SMS"].each do |subtipo| %>
    <optgroup label="<%= subtipo %>">
      <% produtos = Produto.produtos.where(partner_id: Partner.where(slug: partner.slug), subtipo: subtipo).reorder("nome_comercial asc, valor_compra_telemovel asc") %>
      <% produtos.each do |produto| %>
        <option value="<%= produto.id %>-<%= formata_numero_duas_casas(produto.valor_compra_telemovel) %>">
          <%= produto.nome_comercial %>
        </option>
      <% end %>
    </optgroup>
  <% end %>
</select>