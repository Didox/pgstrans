<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@produto, html: { class: "form-vertical", role: "form" }) do |f| %>
        <% if @produto.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@produto.errors.count, "erros") %> no produto, confira abaixo:</h4>

            <ul>
              <% @produto.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-inputs col-sm-6">
           <%= f.input :description, placeholder: "Descrição do Produto" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.label :partner_id, "Parceiro" %>
          <%= f.select :partner_id, Partner.all.collect{|d| [d.name, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
        </div>

        <div class="form-inputs col-sm-12">
          <%= f.label :moeda %>
          <%= f.select :moeda, [["KZ", "KZ"], ["Dolar", "Dolar"], ["Euro", "Euro"], ["Real", "Real"]], {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.label :status_produto_id, "Status do Produto" %>
          <%= f.select :status_produto_id, StatusProduto.all.collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_compra_telemovel, placeholder: "Valor de compra do produto na operadora" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_compra_site, placeholder: "Valor de compra do produto na operadora" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_compra_pos, placeholder: "Valor de compra do produto na operadora" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_compra_tef, placeholder: "Valor de compra do produto na operadora" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_minimo_venda_telemovel, placeholder: "Valor mínimo de venda do produto" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_minimo_venda_site, placeholder: "Valor mínimo de venda do produto" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_minimo_venda_pos, placeholder: "Valor mínimo de venda do produto" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :valor_minimo_venda_tef, placeholder: "Valor mínimo de venda do produto" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :margem_telemovel, placeholder: "Margem % de venda para telemóvel" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :margem_site, placeholder: "Margem % de venda pelo site" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :margem_pos, placeholder: "Margem % de venda por POS" %>
        </div>

        <div class="form-inputs col-sm-6">
          <%= f.input :margem_tef, placeholder: "Margem % de venda por TEF" %>
        </div>

        <div class="form-inputs col-sm-12">
          <%= f.input :mensagem_cupom_venda, placeholder: "Mensagem a ser impressa no cupom de venda. Funcionalidade para POS ou TEF." %>
        </div>

        <div class="form-actions col-sm-12">
          <%= f.button :submit, "Confirmar", class: 'btn btn-danger' %>
        </div>

      <% end %>
    </div>
  </div>
</div>