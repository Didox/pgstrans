<div class="container">

  <h4>Produtos</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->  

  <div style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-6">
          <div class="form-group">
            <label>Nome</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Parceiro</label>
            <div>
              <select name="parceiro_id" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Partner.all.each do |partner| %>
                  <option value="<%= partner.id %>" <% if partner.id.to_s == params[:parceiro_id] %> selected="selected" <% end %> ><%= partner.name %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Moeda</label>
            <div>
              <select name="moeda_id" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Moeda.all.each do |moeda| %>
                  <option value="<%= moeda.id %>" <% if moeda.id.to_s == params[:parceiro_id] %> selected="selected" <% end %> ><%= "#{moeda.id}/#{moeda.simbolo}" %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Status</label>
            <div>
              <select name="status_produto_id" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% StatusProduto.all.each do |status_produto| %>
                  <option value="<%= status_produto.id %>" <% if status_produto.id.to_s == params[:parceiro_id] %> selected="selected" <% end %> ><%= status_produto.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Margem Telemóvel</label>
            <div>
              <input type="number" name="margem_telemovel" value="<%= params[:margem_telemovel] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label>Margem site</label>
            <div>
              <input type="number" name="margem_site" value="<%= params[:margem_site] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" class="btn btn-info" value="Buscar">
        </div>
      </div>
    </form>
  </div>

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Partner</th>
          <th scope="col">Moeda</th>
          <th scope="col">Status</th>
          <th scope="col">Margem Telemóvel</th>
          <th scope="col">Margem SITE</th>
<!--          <th scope="col">Margem POS</th>
          <th scope="col">Margem TEF</th-->
          <th scope="col">Mensagem cupom venda</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @produtos.each do |produto| %>
        <tr>
          <td><%= produto.id %></td>
          <td><%= produto.description %></td>
          <td><%= produto.partner.name %></td>
          <td><%= "#{produto.moeda_id}/#{(produto.moeda.simbolo rescue "")}" %></td>       
          <td><%= produto.status_produto.nome %></td>
          <td class="text-right"><%= produto.margem_telemovel %></td>
          <td class="text-right"><%= produto.margem_site %></td>
<!--          <td><%= produto.margem_pos %></td>
          <td><%= produto.margem_tef %></td-->
          <td><%= produto.mensagem_cupom_venda %></td>
          <td><%= link_to 'Mostrar', produto %></td>
          <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
          <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_produto_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    
    <%= link_to root_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>