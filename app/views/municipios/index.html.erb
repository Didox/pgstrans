<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>Munic√≠pios</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @municipios.each do |municipio| %>
        <tr>
          <td><%= municipio.nome %></td>
          <td><%= link_to 'Mostrar', municipio %></td>
          <td><%= link_to 'Editar', edit_municipio_path(municipio) %></td>
          <td><%= link_to 'Apagar', municipio, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Registro', new_municipio_path %> |
  <%= link_to 'Voltar', root_path %>
</div>