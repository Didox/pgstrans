<div class="col-md-12">
  <div class="col-md-12">
    <h4>Perfil de Usuário</h4>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->  

  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Nome:</dt>
      <dd><%= @perfil_usuario.nome %></dd>
      <dt>Admin?</dt>
      <dd><%= @perfil_usuario.admin %></dd>
      <dt>Operador?</dt>
      <dd><%= @perfil_usuario.operador %></dd>
      <dt>Agente?</dt>
      <dd><%= @perfil_usuario.agente %></dd>
    </dl>
    <br><hr>
    <label>Clique em Editar para acessar as permissões deste perfil</label>
    <br><hr>
    <div class="page-header">
      <%= link_to 'javascript:history.go(-1)', class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
        <span class="glyphicon glyphicon-arrow-left"></span>
        Voltar
      <% end %>
      <%= link_to edit_perfil_usuario_path(@perfil_usuario), class: 'btn btn-warning', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
    </div>
  </div>
</div>