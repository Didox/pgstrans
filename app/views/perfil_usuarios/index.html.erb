<div class="col-md-12">
  <div class="col-md-12">
    <h4>Perfil de Usuários</h4>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div class="col-md-12">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-4">
          <div class="form-group">
            <label>Perfil</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Administrador</label>
            <div>
              <select name="perfil_admin" id="perfil_admin" class="form-control" style="width100%;max-width: 500px;">
                <option value="" <% if params[:perfil_admin].blank? %> selected="selected" <% end %>>
                  Todos
                </option>
                <option value="true" <% if params[:perfil_admin] == "true" %> selected="selected" <% end %>>
                  Somente Adminstrador
                </option>
                <option value="false" <% if params[:perfil_admin] == "false" %> selected="selected" <% end %>>
                  Outros Perfis
                </option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Operador</label>
            <div>
              <select name="perfil_operador" id="perfil_operador" class="form-control" style="width100%;max-width: 500px;">
                <option value="" <% if params[:perfil_operador].blank? %> selected="selected" <% end %>>
                  Todos
                </option>
                <option value="true" <% if params[:perfil_operador] == "true" %> selected="selected" <% end %>>
                  Somente Operador
                </option>
                <option value="false" <% if params[:perfil_operador] == "false" %> selected="selected" <% end %>>
                  Outros Perfis
                </option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">
          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>

          <%= link_to new_perfil_usuario_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-plus"></span>
            Novo Registro
          <% end %>
        </div>
      </div>
    </form>
  </div>  

  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Admin</th>
          <th scope="col">Operador</th>
          <th scope="col">Agente</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @perfil_usuarios.each do |perfil_usuario| %>
        <tr>
          <td><%= perfil_usuario.id %></td>
          <td><%= perfil_usuario.nome %></td>
          <td><%= perfil_usuario.admin ? "Sim" : "Não" %></td>
          <td><%= perfil_usuario.operador ? "Sim" : "Não"  %></td>
          <td><%= perfil_usuario.agente ? "Sim" : "Não"  %></td>
          <td><%= link_to 'Mostrar', perfil_usuario %></td>
          <td><%= link_to 'Editar', edit_perfil_usuario_path(perfil_usuario) %></td>
          <td><%= link_to 'Apagar', perfil_usuario, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @perfil_usuarios, :container => false %>
    </div> 

    <hr>
    <label><strong>Selecione EDITAR para configurar as permissões do perfil</strong></label>
    <br><hr>

    <%= link_to new_perfil_usuario_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>