<div class="container">
  <h4>PerfilUsuarios</h4>

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">Nome</th>
                <th scope="col">Admin</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @perfil_usuarios.each do |perfil_usuario| %>
      <tr>
                <td><%= perfil_usuario.nome %></td>
                <td><%= perfil_usuario.admin %></td>
                <td><%= link_to 'Mostrar', perfil_usuario %></td>
        <td><%= link_to 'Editar', edit_perfil_usuario_path(perfil_usuario) %></td>
        <td><%= link_to 'Apagar', perfil_usuario, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_perfil_usuario_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>