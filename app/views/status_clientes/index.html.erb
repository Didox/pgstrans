<div class="container">

  <h4>Status de Clientes</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @status_clientes.each do |status_cliente| %>
        <tr>
          <td><%= status_cliente.id %></td>
          <td><%= status_cliente.nome %></td>
          <td><%= link_to 'Mostrar', status_cliente %></td>
          <td><%= link_to 'Editar', edit_status_cliente_path(status_cliente) %></td>
          <td><%= link_to 'Apagar', status_cliente, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_status_cliente_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registro
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>