<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      <% url = @pagamento_referencia.new_record? ? "/pagamento_referencias" : "/pagamento_referencias/#{@pagamento_referencia.id}/edit" %>
      <%= simple_form_for(@pagamento_referencia, url: url, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @pagamento_referencia.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@pagamento_referencia.errors.count, "erros") %> no pagamento_referencia, confira abaixo:</h4>

            <ul>
            <% @pagamento_referencia.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="form-input col-sm-4">
            <%= f.label :nro_pagamento_referencia, "Número da Referência de Pagamento" %>
            <%= f.number_field :nro_pagamento_referencia, class: "form-control" %>
          </div>

          <div class="form-input col-sm-4">
            <%= f.label :valor, "Valor do Depósito" %>
            <%= f.text_field :valor, class: "form-control" %>
          </div>

          <div class="form-input col-sm-4">
            <%= f.label :data_pagamento, "Data e Hora do Depósito" %>
            <%= f.date_field :data_pagamento, class: "form-control" %>
          </div>

          <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-success', style: 'margin-top:5px;' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
      <% end %>
    </div>
  </div>
</div>
