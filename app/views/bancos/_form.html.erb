<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dado do Banco</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@banco, html: { class: "form-vertical", role: "form" }) do |f| %>
        <% if @banco.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@banco.errors.count, "erros") %> no banco, confira abaixo:</h4>

            <ul>
            <% @banco.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-input col-sm-6">
          <%= f.input :nome, placeholder: "Nome do banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :sigla, placeholder: "Sigla do banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :morada_sede, :label => "Morada da sede", placeholder: "Morada da sede" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :telefone_sede, :label => "Telefone da sede", placeholder: "Telefone da sede" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :fax_sede, :label => "Fax da sede", placeholder: "Fax da sede" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :morada_escritorio, :label => "Morada do Escritório", placeholder: "Morada do escritório" %>
        </div>
        
        <div class="form-input col-sm-6">
          <%= f.input :telefone_escritorio, :label => "Telefone do Escritório", placeholder: "Telefone do escritório" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :fax_escritorio, :label => "Fax do Escritório", placeholder: "Fax do escritório" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :website, :label => "Website", placeholder: "Website" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :email, :label => "Website", placeholder: "E-mail" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :iban, :label => "IBAN", placeholder: "IBAN" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :conta_bancaria, :label => "Conta Bancária", placeholder: "Conta Bancária" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :logomarca, :label => "Logomarca", placeholder: "Incluir o link que aponta para a logomarca" %>
        </div>

        <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>