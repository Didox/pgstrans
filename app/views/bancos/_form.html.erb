<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados do Banco</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@banco, html: { class: "form-vertical", role: "form" }) do |f| %>
        <% if @banco.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@banco.errors.count, "erros") %> no banco, confira abaixo:</h4>

            <ul>
            <% @banco.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-input col-sm-6">
          <%= f.input :nome, :label => "Nome do Banco", placeholder: "Nome do banco" %>
        </div>

        <div class="form-input col-sm-3">
          <%= f.input :sigla, :label => "Sigla do Banco", placeholder: "Sigla do banco" %>
        </div>

        <div class="form-input col-sm-3">
          <%= f.input :ordem_prioridade, :label => "Ordem de Prioridade do Banco", placeholder: "Ordem de Prioridade do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :morada_sede, :label => "Morada da Sede do Banco", placeholder: "Morada da Sede do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :telefone_sede, :label => "Telefone da Sede do Banco", placeholder: "Telefone da Sede do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :morada_escritorio, :label => "Morada do Escritório do Banco", placeholder: "Morada do escritório do Banco" %>
        </div>
        
        <div class="form-input col-sm-6">
          <%= f.input :telefone_escritorio, :label => "Telefone do Escritório do Banco", placeholder: "Telefone do escritório do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :whatsapp, :label => "Número WhatsApp do Banco", placeholder: "Número WhatsApp do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :website, :label => "Website do Banco", placeholder: "Website do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :email, :label => "E-Mail do Banco", placeholder: "E-Mail do Banco" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :iban, :label => "IBAN Pagasó", placeholder: "IBAN Pagasó" %>
        </div>

        <div class="form-input col-sm-6">
          <%= f.input :conta_bancaria, :label => "Conta Bancária Pagasó", placeholder: "Conta Bancária Pagasó" %>
        </div>

				<div class="form-input col-sm-6">
					<%= f.label :status_banco_id, "Status do Banco" %>
					<%= f.select :status_banco_id, StatusBanco.all.collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control" %>
				</div>

        <div class="form-input col-sm-12">
          <%= f.input :logomarca, :label => "Link para a Logomarca do Banco", placeholder: "Incluir o link para a logomarca" %>
        </div>

        <div class="form-actions col-sm-12">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>