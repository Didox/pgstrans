<div class="container">
  <h4>Lista de Bancos</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">Nome</th>
                <th scope="col">Sigla</th>
<!--                
                <th scope="col">Morada sede</th>
                <th scope="col">Telefone sede</th>
                <th scope="col">Fax sede</th>
                <th scope="col">Morada escritório</th>
                <th scope="col">Telefone escritório</th>
                <th scope="col">Fax escritório</th-->
                <th scope="col">Website</th>
                <th scope="col">Email</th>
                <th scope="col">Logomarca</th-->
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bancos.each do |banco| %>
      <tr>
                <td><%= banco.nome %></td>
                <td><%= banco.sigla %></td>
                <td><%= banco.morada_sede %></td>
                <td><%= banco.telefone_sede %></td>
<!--                <td><%= banco.fax_sede %></td>
                <td><%= banco.morada_escritorio %></td>
                <td><%= banco.telefone_escritorio %></td>
                <td><%= banco.fax_escritorio %></td-->
                <td><%= banco.website %></td>
                <td><%= banco.email %></td>
                <td>
                  <img src="<%= banco.logomarca %>" style="width: 200px">
                </td>
                <td><%= link_to 'Mostrar', banco %></td>
        <td><%= link_to 'Editar', edit_banco_path(banco) %></td>
        <td><%= link_to 'Apagar', banco, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_banco_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>