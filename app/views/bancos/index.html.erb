<div class="container">
  <h4>Bancos</h4>

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">Nome</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bancos.each do |banco| %>
      <tr>
                <td><%= banco.nome %></td>
                <td><%= link_to 'Mostrar', banco %></td>
        <td><%= link_to 'Editar', edit_banco_path(banco) %></td>
        <td><%= link_to 'Apagar', banco, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_banco_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>