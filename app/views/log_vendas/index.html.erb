<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>LogVenda</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Titulo</th>
          <th scope="col">Log</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @log_vendas.each do |log_venda| %>
        <tr>
          <td><%= log_venda.titulo %></td>
          <td><%= log_venda.log %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @perfil_usuarios, :container => false %>
    </div> 

    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>