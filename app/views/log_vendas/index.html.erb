<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>LogVenda</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
                    <th scope="col">Titulo</th>
                    <th scope="col">Log</th>
                    <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @log_vendas.each do |log_venda| %>
        <tr>
                    <td><%= log_venda.titulo %></td>
                    <td><%= log_venda.log %></td>
                    <td><%= link_to 'Mostrar', log_venda %></td>
          <td><%= link_to 'Editar', edit_log_venda_path(log_venda) %></td>
          <td><%= link_to 'Apagar', log_venda, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_log_venda_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>