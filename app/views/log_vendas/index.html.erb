<div class="col-md-12 scroltable">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <h4>Log de Tentativas de Vendas com Erro - Todas as Operadoras</h4>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-4">
          <div class="form-group">
            <label>Usuário</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Título</label>
            <div>
              <input type="text" name="titulo" value="<%= params[:titulo] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Log</label>
            <div>
              <input type="text" name="log" value="<%= params[:log] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12 form-group">
        <div style="float: right;margin-right:10px">
          <%= button_tag(type: 'submit', class: "btn btn-info", value: "Buscar", style: "width: 150px;text-align: center;margin-right: 0px;") do %>
              <span class="glyphicon glyphicon-search"></span> Buscar
          <% end %>

          <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
            <span class="glyphicon glyphicon-arrow-left"></span>
            Voltar
          <% end %>         
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-12 scroltable">
    <h4>
      Total de Ocorrências: <strong><%= number_to_currency(@log_vendas_total, :precision => 0, :unit => "") %></strong>
    </h4>
    <hr>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" style="width: 25%">Dados</th>
          <th scope="col">Log Completo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @log_vendas.each do |log_venda| %>
        <tr>
          <td>
            <b>Usuário:</b> <%= log_venda.usuario.nome rescue "" %>
          <td>
          <td>
            <b>Descricão:</b> <%= log_venda.titulo %>
          </td>
          <td>
            <b>Log:</b> <%= log_venda.log %></td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @log_vendas, :container => false %>
    </div> 

    <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      Voltar
    <% end %>

  </div>
</div>