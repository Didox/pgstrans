<div class="container">

  <h4>Status Parceiros</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th> 
          <th scope="col">Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @status_parceiros.each do |status_parceiro| %>
        <tr>
          <td><%= status_parceiro.id %></td>
          <td><%= status_parceiro.nome %></td>
          <td><%= link_to 'Mostrar', status_parceiro %></td>
          <td><%= link_to 'Editar', edit_status_parceiro_path(status_parceiro) %></td>
          <td><%= link_to 'Apagar', status_parceiro, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_status_parceiro_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>