<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <p id="notice"><%= notice %></p>
    <h4>Situação de Bancos</h4>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12" style="margin-top:10px">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-12">
          <div class="form-group">
            <label>Pesquisa por Descrição do Situação</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">

          <%= button_tag(type: 'submit', class: "btn btn-info", value: "Buscar", style: "width: 150px;text-align: center;margin-right: 0px;") do %>
              <span class="glyphicon glyphicon-search"></span> Buscar
          <% end %>

          <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
            <span class="glyphicon glyphicon-arrow-left"></span>
            Voltar
          <% end %>

        </div>
      </div>
    </form>
  </div>

  <div class="col-md-12 scroltable">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">ID do Registo</th> 
        <th scope="col">Descrição da Situação</th>
        <th colspan="3">Ações para o Registo</th>
      </tr>
    </thead>

    <tbody>
      <% @status_bancos.each do |status_banco| %>
      <tr>
        <td class="text-center"><%= status_banco.id %></td>
        <td><%= status_banco.nome %></td>
        <td><%= link_to 'Editar', edit_status_banco_path(status_banco) %></td>
        <td><%= link_to 'Apagar', status_banco, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="apple_pagination">
    <%= will_paginate @status_banco, :container => false %>
  </div>

  <%= link_to new_status_banco_path, class: 'btn btn-success', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Registo
  <% end %>    

  <%= link_to backoffice_index_path, class: 'btn btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
    <span class="glyphicon glyphicon-arrow-left"></span>
    Voltar
  <% end %>
</div>
</div>
