<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Lista de Mensagens apresentadas no Modal Informativo</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div>
    <form action="" method="get" id="formApuracao">
      <div class="col-sm-4">
        <div class="form-group">
          <label>Título</label>
          <div>
            <input type="text" name="titulo" value="<%= params[:titulo] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Parte da Mensagem</label>
          <div>
            <input type="text" name="mensagem" value="<%= params[:mensagem] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="form-group">
          <label>Situação</label>
          <div>
            <select name="ativa" id="ativa" class="form-control" style="width100%;max-width: 500px;">
              <option value="" <% if params[:ativa].blank? %> selected="selected" <% end %>>
                Todos
              </option>
              <option value="true" <% if params[:ativa] == "true" %> selected="selected" <% end %>>
                Somente Ativas
              </option>
              <option value="false" <% if params[:ativa] == "false" %> selected="selected" <% end %>>
                Somente Inativas
              </option>
            </select>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">
          <%= link_to modal_informativos_path, class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
          <%= link_to new_modal_informativo_path, class: 'btn btn-success' do %>
            <span class="glyphicon glyphicon-plus"></span>
            Novo Registo
          <% end %>
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
            <th scope="col" style="width:20%">Título da Mensagem</th>
            <th scope="col" style="width:55%">Teor da Mensagem</th>
            <th scope="col" style="width:10%">Situação</th>
            <th colspan="3" style="width:15%">Ações para o Registo</th>
        </tr>
      </thead>

      <tbody>
        <% @modal_informativos.each do |modal_informativo| %>
        <tr>
            <td><%= modal_informativo.titulo %></td>
            <td><%= modal_informativo.mensagem %></td>
            <td><%= modal_informativo.ativa? ? "Ativa": "Inativa" %></td>

            <td><%= link_to 'Mostrar', modal_informativo %></td>
          <td><%= link_to 'Editar', edit_modal_informativo_path(modal_informativo) %></td>
          <td><%= link_to 'Apagar', modal_informativo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>


    <div class="apple_pagination">
      <%= will_paginate @bancos, :container => false %>
    </div>

    <%= link_to new_modal_informativo_path, class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %> 

    <%= link_to backoffice_index_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>