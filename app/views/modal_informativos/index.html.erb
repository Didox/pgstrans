<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>ModalInformativo</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
                    <th scope="col">Titulo</th>
                    <th scope="col">Mensagem</th>
                    <th scope="col">Validade inicio</th>
                    <th scope="col">Validade fim</th>
                    <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @modal_informativos.each do |modal_informativo| %>
        <tr>
                    <td><%= modal_informativo.titulo %></td>
                    <td><%= modal_informativo.mensagem %></td>
                    <td><%= modal_informativo.validade_inicio %></td>
                    <td><%= modal_informativo.validade_fim %></td>
                    <td><%= link_to 'Mostrar', modal_informativo %></td>
          <td><%= link_to 'Editar', edit_modal_informativo_path(modal_informativo) %></td>
          <td><%= link_to 'Apagar', modal_informativo, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_modal_informativo_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>