<div class="container">

  <h4>Mostrar ModalInformativo</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->  

  <div class="container">
    <dl class="dl-horizontal">
      <dt>Titulo:</dt>
      <dd><%= @modal_informativo.titulo %></dd>
      <dt>Mensagem:</dt>
      <dd><%= @modal_informativo.mensagem %></dd>
      <dt>Validade inicio:</dt>
      <dd><%= @modal_informativo.validade_inicio %></dd>
      <dt>Validade fim:</dt>
      <dd><%= @modal_informativo.validade_fim %></dd>
    </dl>

    <div class="page-header">
      <%= link_to modal_informativos_path, class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Voltar
      <% end %>
      <%= link_to edit_modal_informativo_path(@modal_informativo), class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
    </div>
  </div>
</div>