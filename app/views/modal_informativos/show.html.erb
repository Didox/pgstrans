<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Dados da Mensagem para o Modal Informativo</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <dl class="dl-horizontal">
    <dt>Título da Mensagem:</dt>
    <dd><%= @modal_informativo.titulo %></dd>
    <dt>Teor da Mensagem:</dt>
    <dd>
      <hr>
      <%= @modal_informativo.mensagem %>
      <hr>
    </dd>
    <dt>Situação:</dt>
    <dd><%= @modal_informativo.ativa? ? "Ativa": "Inativa" %></dd>
  </dl>
  <div class="col-md-12">
    <%= link_to 'javascript:history.go(-1)', class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
    <%= link_to edit_modal_informativo_path(@modal_informativo), class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Editar
    <% end %>
  </div>
</div>