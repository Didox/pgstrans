<div class="col-md-12 scroltable">
	<div class="col-md-12">
    <h3>Lista de Bancos e Contas Bancárias Pagasó</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div>
    <form action="" method="get" id="formApuracao">
      <div class="col-sm-2">
        <div class="form-group">
          <label>Sigla</label>
          <div>
            <input type="text" name="sigla" value="<%= params[:sigla] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-5">
        <div class="form-group">
          <label>Nome do Banco</label>
          <div>
            <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="form-group">
          <label>IBAN Pagasó</label>
          <div>
            <input type="text" name="iban" value="<%= params[:iban] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="form-group">
          <label>Conta Bancária Pagasó</label>
          <div>
            <input type="text" name="conta_bancaria" value="<%= params[:conta_bancaria] %>" class="form-control">
          </div>
        </div>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">
          <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
          <% if usuario_logado.admin? || usuario_logado.operador? %>
            <%= link_to new_banco_path, class: 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Novo Registo
            <% end %>
          <% end %>
        </div>
      </div>
    </form>
  </div>

  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Dados Bancários</th>
        </tr>
      </thead>

      <tbody>
        <% @bancos.each do |banco| %>
        <tr class="text-center">
            <td style="width: 350px">
                <br>
                <img src="<%= banco.logomarca %>" style="width: 200px"><br>
                <b>Sigla:</b> <%= banco.sigla %><br>
                <b>Nome do Banco:</b> <%= banco.nome %><br>
                <b>IBAN Pagasó:</b> <%= banco.iban %><br>
                <b>Conta Bancária Pagasó:</b> <%= banco.conta_bancaria %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <hr>
    <p class="text-center">
        <br>WhatsApp Pagasó: +244 931 489 997
        <br>Rua Domingos do Ó, 62 / Benguela, Angola
        <br>Telefones +244 944.090.151 - 998.090.151/152/153
        <br>E-Mail: pagaso@tiv-tecnologia.com
        <br>Horário de Atendimento: 
        <br>Segunda a sexta-feira: das 7:00 às 20:00 horas
        <br>Aos sábados: das 7:00 às 18:00 horas
    </p>
    <div class="apple_pagination">
      <%= will_paginate @bancos, :container => false %>
    </div>

    <%= link_to backoffice_index_path, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>