<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>Perfil Master</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Descrição</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @master_profiles.each do |master_profile| %>
        <tr>
          <td><%= master_profile.id %></td>
          <td><%= master_profile.description %></td>
          <td><%= link_to 'Mostrar', master_profile %></td>
          <td><%= link_to 'Editar', edit_master_profile_path(master_profile) %></td>
          <td><%= link_to 'Apagar', master_profile, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Novo Registro', new_master_profile_path %> |
  <%= link_to 'Voltar', root_path %>
</div>