<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>Lista de Pa√≠ses</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
                  <th scope="col">Name eng</th>
                  <th scope="col">Name pt</th>
                  <th scope="col">Iso2</th>
                  <th scope="col">Bacen</th>
                  <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @countries.each do |country| %>
        <tr>
                  <td><%= country.name_eng %></td>
                  <td><%= country.name_pt %></td>
                  <td><%= country.iso2 %></td>
                  <td><%= country.bacen %></td>
                  <td><%= link_to 'Mostrar', country %></td>
          <td><%= link_to 'Editar', edit_country_path(country) %></td>
          <td><%= link_to 'Apagar', country, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to new_country_path, class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-plus"></span>
        Novo Registro
    <% end %>    

    <%= link_to root_path, class: 'btn btn-danger' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Voltar
    <% end %>
  </div>
</div>