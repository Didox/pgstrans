<div class="container">
  <h4>Countries</h4>

  <table class="table table-hover">
    <thead>
      <tr>
                <th scope="col">Name eng</th>
                <th scope="col">Name pt</th>
                <th scope="col">Iso2</th>
                <th scope="col">Bacen</th>
                <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @countries.each do |country| %>
      <tr>
                <td><%= country.name_eng %></td>
                <td><%= country.name_pt %></td>
                <td><%= country.iso2 %></td>
                <td><%= country.bacen %></td>
                <td><%= link_to 'Mostrar', country %></td>
        <td><%= link_to 'Editar', edit_country_path(country) %></td>
        <td><%= link_to 'Apagar', country, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Novo Registo", new_country_path, class: 'btn btn-danger' %>
  <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
</div>