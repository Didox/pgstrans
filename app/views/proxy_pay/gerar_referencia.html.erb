<% if @usuario.present? %>
  <div>
    <!-- Page Heading/Breadcrumbs -->
    <%= render :partial => 'shared/header_backoffice' %>
    <!-- /.row -->

    <div class="col-md-12">
      
      <div class="card" style="margin-top: 5px;">
        <div class="card-header">
          <div class="col-md-12" style="margin-bottom: 20px;font-weight: bold">
            REFERÊNCIA PARA PAGAMENTO
          </div>
          <div class="card-body">
          
            <% if @sucesso %>
              Referência gerada com SUCESSO 
              <br><br>
              <div><b>Login do Usuário:</b> <%= @usuario.login %></div><br>
              <div><b>Nome do Usuário :</b> <%= @usuario.nome.camelize %></div><br>
              <div><b>Referência: <%= @usuario.nro_pagamento_referencia %></b> 
            <% else %>
              Erro - <%= @erro %><br><br>
            <% end %>
            
            <div class="saveCancelbts" style="padding-top: 25px;padding-bottom: 25px;text-align: left;">
              <div style="display: inline-block;margin-bottom: 10px;">
                <%= link_to 'javascript:history.go(-1)', class: 'btn btn-space btn-primary', style: "width: 150px;text-align: center;margin-left: 0px;" do %>
                  <span class="glyphicon glyphicon-arrow-left"></span>
                  Voltar
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

