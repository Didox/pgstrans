
<style>
  @media print {
    .break-page {page-break-after: always;}
  }
</style>
<div class="col-md-12 scroltable">
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="col-md-12">
    
    <div class="card" style="margin-top: 5px;">
      <div class="card-header">
        <div class="col-md-12" style="margin-bottom: 20px;font-weight: bold">
          Confirmação de Transação AFRICELL 
          <hr>
          Busca de acordo com os dados informados
        </div>
        <% if @retorno_confirmacao.blank? %>
          <div class="card-body">
            <form action="/africell/confirmacao_transacao" method="get">

              <div class="col-md-12">
                <div style="background-color: #F2F3F4;padding: 10px;color: #000;">
                  <h3>Informe</h3>
                  <div style="margin-left: 4%;">Número do Telemóvel MSISDN</div>
                  <input type="text" class="form-control" value="<%= params[:target_msisdn] %>" name="target_msisdn" placeholder="Número do Telemóvel MSISDN" style="margin-left: 4%;max-width: 300px;">
                </div>
                <div style="background-color: #F2F3F4;padding: 10px;color: #000;">
                  <div style="margin-left: 4%;">Número de Referência da Transação</div>
                  <input type="text" class="form-control" value="<%= params[:request_id] %>" name="request_id" placeholder="Número de Referência da Transação" style="margin-left: 4%;max-width: 300px;">
                </div>
                <div class="saveCancelbts" style="padding-top: 25px;padding-bottom: 25px;text-align: right;">

                  <div style="display: inline-block;margin-bottom: 10px;">
                      <%= button_tag(type: 'submit', class: "btn btn-success", value: "Validar", style: "width: 150px;text-align: center;margin-right: 0px;") do %>
                          <span class="glyphicon glyphicon-list-alt"></span> Validar
                      <% end %>
                  </div>
                  <div style="display: inline-block;margin-bottom: 10px;">
                    <%= link_to root_path, class: 'btn btn-space btn-primary', style: "width: 150px;text-align: center;margin-right: 0px;" do %>
                      <span class="glyphicon glyphicon-list-alt"></span>
                      Voltar
                    <% end %>
                  </div>
                  
                </div>
              </div>
            </form>
          </div>
        <% else %>
          <%= render "recibo_confirmacao_transacao" %>
          <hr class="break-page">
          <br>
          <br>
          <div style="display: inline-block;margin-bottom: 10px;width: 100%;margin-bottom: 5px;">
            <%= link_to africell_confirmacao_transacao_path, class: 'btn btn-primary', style: "width: 100%;text-align: center;" do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Voltar
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
