<div class="container">

	<h3>Novo Usuário</h3>

	<!-- Page Heading/Breadcrumbs -->
  	<%= render :partial => 'shared/header_backoffice' %>
  	<!-- /.row -->

	<%= render 'form', usuario: @usuario %>


	<% if usuario_logado.agente? %>
		<hr>
    	<div class="form-group col-sm-12">
    	<label><strong>Após o cadastro, a equipa de Backoffice da Pagasó concluirá a parametrização do usuário e liberará o acesso!</strong></label>
      	<br><hr>
    <% end %>

	<%= link_to usuarios_path, class: 'btn btn-danger' do %>
    	<span class="glyphicon glyphicon-list-alt"></span>
    	Voltar
  	<% end %>

</div>