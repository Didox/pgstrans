<div class="col-md-12">
  <div class="col-md-12">
    <h3>Lista de Usuários</h3>
  </div>
  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->
  <div class="col-md-12">
    <form action="" method="get" id="formApuracao">
      <div class="row" style="padding:10px">
        <div class="col-sm-3">
          <div class="form-group">
            <label>Nome do Usuário</label>
            <div>
              <input type="text" name="nome" value="<%= params[:nome] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Login do Usuário</label>
            <div>
              <input type="text" name="login" value="<%= params[:login] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>ID Interno do Usuário</label>
            <div>
              <input type="text" name="id_interno" value="<%= params[:id_interno] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>E-mail do Usuário</label>
            <div>
              <input type="text" name="email" value="<%= params[:email] %>" class="form-control">
            </div>
          </div>
        </div>
        <% if usuario_logado.admin? || usuario_logado.operador? %>
          <div class="col-sm-3">
            <div class="form-group">
              <label>Morada do Usuário</label>
              <div>
                <input type="text" name="morada" value="<%= params[:morada] %>" class="form-control">
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="form-group">
              <label>Bairro do Usuário</label>
              <div>
                <input type="text" name="bairro" value="<%= params[:bairro] %>" class="form-control">
              </div>
            </div>
          </div>
          <div class="col-sm-2">
          <div class="form-group">
            <label>Telefone do Usuário</label>
            <div>
              <input type="text" name="telefone" value="<%= params[:telefone] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>WhatsApp do Usuário</label>
            <div>
              <input type="text" name="whatsapp" value="<%= params[:whatsapp] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Perfil do Usuário</label>
            <div>
              <select name="perfil_usuario_id" onchange="pgstrans.carregaPerfilUsuario(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% PerfilUsuario.all.reorder(nome: :asc).each do |perfil_usuario| %>
                  <option value="<%= perfil_usuario.id %>" <% if perfil_usuario.id.to_s == params[:perfil_usuario_id] %> selected="selected" <% end %> ><%= perfil_usuario.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Situação do Usuário</label>
            <div>
              <select name="status_cliente_id" onchange="pgstrans.carregaStatusCliente(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% StatusCliente.all.reorder(nome: :asc).each do |status_cliente| %>
                  <option value="<%= status_cliente.id %>" <% if status_cliente.id.to_s == params[:status_cliente_id].to_s %> selected="selected" <% end %> ><%= status_cliente.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Província do Usuário</label>
            <div>
              <select name="provincia_id" onchange="pgstrans.carregaProvincia(this)" class="form-control">
                <option value="" selected="'selected'">Todas</option>
                <% Provincium.all.reorder(nome: :asc).each do |provincia| %>
                  <option value="<%= provincia.id %>" <% if provincia.id.to_s == params[:provincia_id] %> selected="selected" <% end %> ><%= provincia.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
         <div class="col-sm-2">
          <div class="form-group">
            <label>Município do Usuário</label>
            <div>
              <select name="municipio_id" onchange="pgstrans.carregaMunicipio(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Municipio.all.reorder(nome: :asc).each do |municipio| %>
                  <option value="<%= municipio.id %>" <% if municipio.id.to_s == params[:municipio_id] %> selected="selected" <% end %> ><%= municipio.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Grupo do Usuário</label>
            <div>
              <select name="grupo_id" id="grupo_id" class="form-control" style="width100%;">
                <option value="" <% if params[:grupo_id].blank? %> selected="selected" <% end %>>
                  Todos
                </option>
                <% Grupo.all.reorder(nome: :asc).each do |grupo| %>
                  <option value="<%= grupo.id %>" <% if params[:grupo_id] == grupo.id.to_s %> selected="selected" <% end %>>
                    <%= grupo.nome %>
                  </option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
      <% end %>
      <% if usuario_logado.admin? || usuario_logado.operador? %>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Administrador</label>
            <div>
              <select name="perfil_admin" id="perfil_admin" class="form-control" style="width100%;max-width: 500px;">
                <option value="" <% if params[:perfil_admin].blank? %> selected="selected" <% end %>>
                  Todos
                </option>
                <option value="true" <% if params[:perfil_admin] == "true" %> selected="selected" <% end %>>
                  Somente Adminstrador
                </option>
                <option value="false" <% if params[:perfil_admin] == "false" %> selected="selected" <% end %>>
                  Outros Perfis
                </option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Operador</label>
            <div>
              <select name="perfil_operador" id="perfil_operador" class="form-control" style="width100%;max-width: 500px;">
                <option value="" <% if params[:perfil_operador].blank? %> selected="selected" <% end %>>
                  Todos
                </option>
                <option value="true" <% if params[:perfil_operador] == "true" %> selected="selected" <% end %>>
                  Somente Operador
                </option>
                <option value="false" <% if params[:perfil_operador] == "false" %> selected="selected" <% end %>>
                  Outros Perfis
                </option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label>Distribuidor</label>
            <div>
              <select name="sub_distribuidor_id" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% SubDistribuidor.all.reorder(nome: :asc).each do |sub_distribuidor| %>
                  <option value="<%= sub_distribuidor.id %>" <% if sub_distribuidor.id.to_s == params[:sub_distribuidor_id] %> selected="selected" <% end %> ><%= sub_distribuidor.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Agente</label>
            <div>
              <select name="sub_agente_id" onchange="pgstrans.carregaSubAgente(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% SubAgente.all.reorder(nome_fantasia: :asc).each do |sub_agente| %>
                  <option value="<%= sub_agente.id %>" <% if sub_agente.id.to_s == params[:sub_agente_id] %> selected="selected" <% end %> ><%= sub_agente.nome_fantasia %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Data de Adesão (Início)</label>
            <div>
              <input type="date" name="data_adesao_inicio" value="<%= params[:data_adesao_inicio] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Data de Adesão (Fim)</label>
            <div>
              <input type="date" name="data_adesao_fim" value="<%= params[:data_adesao_fim] %>" class="form-control">
            </div>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label>Tipo de Estabelecimento</label>
            <div>
              <select name="uni_pessoal_empresa_id" onchange="pgstrans.carregaUnipessoal_Empresa(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% UniPessoalEmpresa.all.reorder(nome: :asc).each do |uni_pessoal_empresa| %>
                  <option value="<%= uni_pessoal_empresa.id %>" <% if uni_pessoal_empresa.id.to_s == params[:uni_pessoal_empresa_id] %> selected="selected" <% end %> ><%= uni_pessoal_empresa.nome %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label>Grupo de Actividade Económica </label>
            <div>
              <select name="industry_id" onchange="pgstrans.carregaIndustry(this)" class="form-control">
                <option value="" selected="'selected'">Todos</option>
                <% Industry.all.reorder(descricao_grupo: :asc).each do |industry| %>
                  <option value="<%= industry.id %>" <% if industry.id.to_s == params[:industry_id] %> selected="selected" <% end %> ><%= industry.descricao_grupo %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      <div class="form-group">
        <div style="float: right;margin-right:10px">
          <input type="submit" value="Buscar" class="btn btn-info">
          <%= link_to backoffice_index_path, class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Voltar
          <% end %>
          <%= link_to new_usuario_path, class: 'btn btn-success' do %>
            <span class="glyphicon glyphicon-plus"></span>
            Novo Registo
          <% end %>
        </div>
    </form>
  </div>
  <% if usuario_logado.admin? %>
    <br>
    Demonstrativo do total de usuários cadastrados (linha do tempo)
    <br>
    <br>
    <%= line_chart Usuario.group_by_day(:created_at).count %>
    <br>
    <hr>
  <% end %>
  <div class="col-md-12 scroltable">
  <h4>
    Quantidade de Usuários: <strong><%= number_to_currency(@usuarios_total, :precision => 0, :unit => "") %></strong>
  </h4>
  <hr>
  <h4>
    Usuários Cadastrados
  </h4>
  <hr>
    <table class="table table-hover">
      <thead>
        <tr class="text-left">
          <% if @adm.admin? || @adm.operador? %>
            <th scope="col">ID do Usuário</th>
          <% end %>
          <th scope="col">Dados do Usuário</th>
          <% if usuario_logado.admin? || usuario_logado.operador? %>
              <th scope="col">Admin?</th>
              <th scope="col">Operador?</th>
              <th scope="col">Agente</th>     
          <% end %>
          <th scope="col">Subagente
          <% if usuario_logado.admin? || usuario_logado.operador? %>
            e Data de Cadastro e Adesão
          <% end %>
          </th>
          <% if usuario_logado.admin? || usuario_logado.operador? %>
            <th colspan="4">Ações para o Registo</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <% if @adm.admin? || @adm.operador? %>
              <td><%= usuario.id %></td>
            <% end %>
            <td>
              Login: <%= usuario.login %><br>
              Referência: 
                <% if usuario.nro_pagamento_referencia.present? %>
                  <%= usuario.nro_pagamento_referencia %>
                <% else %>
                Definir
                <% end %><br>
              Nome: <%= usuario.nome %><br>
              E-mail: <%= usuario.email %><br>
              Situação: <%= usuario.status_cliente.nome rescue "" %>
              - Telefone: <%= usuario.telefone %><br>
              <% if usuario_logado.admin? || usuario_logado.operador? %>
                Perfil do usuário: <a href="/perfil_usuarios/<%= usuario.perfil_usuario_id %>" target="_blank"><%= usuario.perfil_usuario.nome %></a><br>
              <% else %>
                Perfil do usuário: <%= usuario.perfil_usuario.nome %><br>
              <% end %>
              Grupos associados ao usuário: <br>
              <ul>
                <% usuario.grupo_usuarios.each do |gu| %>
                  <li>
                    <b>Grupo:</b> 
                        <% if usuario_logado.admin? || usuario_logado.operador? %>
                            <a href="/grupos/<%= gu.grupo_id %>" target="_blank">
                            <%= gu.grupo.nome %></a>
                        <% else %>
                            <%= gu.grupo.nome %></a>
                        <% end %>
                    <br>
                    <% if usuario_logado.admin? || usuario_logado.operador? %>
                      <b>Consegue ver registos do grupo? </b> Sim<br>
                      <b>Compartilha seus registos com o grupo? </b>
                      <select id="compartilha" onchange="pgstrans.alteraCompartilha(<%= gu.id %>, this)">
                        <option value="true" <%= gu.escrita ? "selected='selected'" : "" %> >Sim</option>
                        <option value="false" <%= !gu.escrita ? "selected='selected'" : "" %> >Não</option>
                      </select>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </td>
            <% if usuario_logado.admin? || usuario_logado.operador? %>
                <td><%= usuario.admin? ? "Sim": "Não" %></td>
                <td><%= usuario.operador? ? "Sim": "Não" %></td>
                <td><%= usuario.agente? ? "Sim": "Não" %></td>
            <% end %>
            <td>
              <%= "#{usuario.sub_agente_id}/#{usuario.sub_agente.nome_fantasia}" %><br><br>
              <% if @adm.admin? || @adm.operador? %>             
                Data de Cadastro: <%= usuario.created_at %><br><br>
                Data de Adesão: <%= usuario.data_adesao.strftime("%d/%m/%Y") rescue "" %>
              <% end %>
            </td>
            <td>
              <% if usuario_logado.admin? || usuario_logado.operador? %>
                  <%= link_to 'Mostrar', usuario_path(usuario), class: 'btn btn-light btn-sm btn-block' %>
                  <%= link_to 'Editar', edit_usuario_path(usuario), class: 'btn btn-light btn-sm btn-block' %>
                  <% if usuario.logado %>
                    <%= link_to 'Forçar Logout ', "/usuarios/#{usuario.id}/forcar-logout", data: { confirm: 'Confirma?' }, class: 'btn btn-light btn-sm btn-block' %>
                  <% end %>

                  <!-- Gerar referencia -->
                  <% if usuario.nro_pagamento_referencia.present? %>
                      <%= link_to 'javascript:if(confirm("Confirma a geração da referência do usuário?")){ window.location.href="/proxy_pay/gerar_referencia?usuario_id=' + usuario.id.to_s + '" }', class: 'btn btn-light btn-sm btn-block' do %>
                        Gerar Referência
                    <% end %>
                  <% else %>
                      <button type="button" class="btn btn-light btn-sm btn-block">Registar Referência</button>
                  <% end %>

                  <!-- Apagar referencia -->
                  <% if usuario.nro_pagamento_referencia.present? %>
                      <%= link_to 'javascript:if(confirm("Confirma a remoção da referência do usuário?")){ window.location.href="/proxy_pay/apagar_referencia?usuario_id=' + usuario.id.to_s + '" }', class: 'btn btn-danger btn-sm btn-block' do %>
                        Apagar Referência
                    <% end %>
                  <% else %>
                      <button type="button" class="btn btn-light btn-sm btn-block">Apagar Referência</button>
                  <% end %>

                  <%= link_to 'Apagar Usuário', usuario, method: :delete, data: { confirm: 'Pense bem! Tem certeza que quer apagar este usuário?' }, class: 'btn btn-danger btn-sm btn-block' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="apple_pagination">
      <%= will_paginate @usuarios, :container => false %>
    </div> 

    <%= link_to new_usuario_path, class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Novo Registo
    <% end %>    

    <%= link_to backoffice_index_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Voltar
    <% end %>
  </div>
</div>