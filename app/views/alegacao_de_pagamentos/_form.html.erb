<div class="col-md-12" data-target="toggle.grid">
  <div class="card border-simpleform box-shadow mb-4">
    <div class="card-header text-simpleform d-flex align-items-center justify-content-between">
      <div>
        <strong>Dados</strong><br />
      </div>
    </div>
  </div>

  <div class="card border-bootstrap box-shadow mb-4">
    <div class="card-header text-bootstrap align-items-center justify-content-between">
      
      <%= simple_form_for(@alegacao_de_pagamento, html: { class: "form-horizontal", role: "form" }) do |f| %>
        <% if @alegacao_de_pagamento.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><%= pluralize(@alegacao_de_pagamento.errors.count, "erros") %> no alegacao_de_pagamento, confira abaixo:</h4>

            <ul>
            <% @alegacao_de_pagamento.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-input col-sm-12">
          <%= f.label :usuario_id, "Buscar ou selecionar usuário" %>
          <div style="display:flex">
            <input type="text" id="usuario" class="form-control autocomplete" style="width:30%">
            <%= f.select :usuario_id, Usuario.com_acesso(usuario_logado).limit(100).collect{|d| [d.nome, d.id]}, {:include_blank => "[Selecione]"}, required:true, class: "form-control options-autocomplete", style: "width:70%" %>
          </div>
        </div>
        <div class="form-input col-sm-12">
          <%= f.label :valor_deposito, "Valor Depósito", class: "col-sm-2" %>
          <%= f.text_field :valor_deposito, class: "form-control" %>
        </div>
        <div class="form-input col-sm-12">
          <%= f.label :data_deposito, "Data Depósito", class: "col-sm-2" %>
          <%= f.datetime_field :data_deposito, class: "form-control" %>
        </div>
        <div class="form-input col-sm-12">
          <%= f.label :numero_talao, "Nro. Talão", class: "col-sm-2" %>
          <%= f.text_field :numero_talao, class: "form-control" %>
        </div>
        <div class="form-input col-sm-12">
          <%= f.label :banco_id, class: "col-sm-2" %>
          <%= f.select :banco_id, Banco.where(status_banco_id: Banco::ATIVO).collect{|d| [d.nome, d.id]}, {}, required:true, class: "form-control" %>
        </div>
        <div class="form-input col-sm-12">
          <%= f.label :comprovativo, class: "col-sm-2" %>
          <%= f.file_field :comprovativo, class: "form-control" %>
        </div>
        <div class="form-actions col-sm-12" style="margin-top: 20px">
          <%= f.button :button, class: 'btn btn-danger' do %>
            <span class="glyphicon glyphicon-ok"></span>
            Confirmar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
