<div class="container">
  <p id="notice"><%= notice %></p>

  <h4>Menu</h4>

  <!-- Page Heading/Breadcrumbs -->
  <%= render :partial => 'shared/header_backoffice' %>
  <!-- /.row -->

  <div class="container scroltable">
    <table class="table table-hover">
      <thead>
        <tr>
                    <th scope="col">Sessao</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Link</th>
                    <th scope="col">Controller</th>
                    <th scope="col">Action</th>
                    <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @menus.each do |menu| %>
        <tr>
                    <td><%= menu.sessao %></td>
                    <td><%= menu.nome %></td>
                    <td><%= menu.link %></td>
                    <td><%= menu.controller %></td>
                    <td><%= menu.action %></td>
                    <td><%= link_to 'Mostrar', menu %></td>
          <td><%= link_to 'Editar', edit_menu_path(menu) %></td>
          <td><%= link_to 'Apagar', menu, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Novo Registo", new_menu_path, class: 'btn btn-danger' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-danger' %>
  </div>
</div>